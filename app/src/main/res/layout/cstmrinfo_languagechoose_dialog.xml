<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@color/dark_blue"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_8dp"
        android:gravity="center">
        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/tv_cstmr_infrmn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/dimen_5dp"
            android:text="Customer Information"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18dp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/padding5"
            android:padding="@dimen/padding5"
            android:src="@drawable/close"
            app:tint="@color/gray">

        </ImageView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cv_bottom"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:id="@+id/ll_changemember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_5dp">

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consultation For"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_familyMember"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_5dp" />

            <ImageView
                android:id="@+id/lImage"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/padding3"
                android:layout_marginEnd="@dimen/padding3"
                android:src="@drawable/dash_gap"

                />

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:text="Please provide basic information about the customer"
                android:textColor="@color/dark_black"
                android:textSize="@dimen/dimen_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding3"
                android:layout_marginTop="@dimen/padding5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5dp"
                        android:text="Gender *"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/dimen_15sp" />


                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radiogender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding7"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_hint"></RadioButton>

                    <RadioButton
                        android:id="@+id/radioF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_hint"></RadioButton>

                    <RadioButton
                        android:id="@+id/radioO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_hint"></RadioButton>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:orientation="vertical"
                android:padding="@dimen/dimen_5dp">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp"
                    android:text="Age(in years)*"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/dimen_15sp" />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding40"
                    android:layout_weight="0.5"
                    android:background="@drawable/edittext_color"
                    android:hint=""
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/padding5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp"
                    app:tint="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:orientation="vertical"
                android:padding="@dimen/dimen_5dp">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp"
                    android:text="Residing Pincode in India *"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/dimen_15sp" />

                <EditText
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding40"
                    android:background="@drawable/edittext_color"
                    android:hint=""
                    android:inputType="number"
                    android:paddingStart="@dimen/padding5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp"
                    app:tint="@color/gray"
                    android:maxLength="6"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_pincode_locations"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding3"
                android:layout_marginTop="@dimen/padding5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_5dp"
                        android:text="Select your preferred language *"
                        android:textColor="@color/dark_black"
                        android:textSize="@dimen/dimen_15sp" />


                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radiolanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding7"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioEnglishlng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_hint"></RadioButton>

                    <RadioButton
                        android:id="@+id/radioOtherlng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Languages"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_hint"></RadioButton>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:orientation="vertical"
                android:padding="@dimen/dimen_5dp">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp"
                    android:text="Contact Information"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/dimen_15sp" />

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp"
                    android:text="Provide your contact info for alerts,status updates and for any other booking related communications"
                    android:textSize="@dimen/dimen_12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_5dp">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp"
                    android:text="Phone"
                    android:textSize="@dimen/dimen_15sp" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/edittext_color"
                    android:visibility="gone"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="@dimen/dimen_15dp" />

                <EditText
                    android:id="@+id/edt_Ccode"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding40"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/edittext_color"
                    android:hint="Enter Country Code"
                    android:inputType="phone"
                    android:maxLength="4"
                    android:paddingStart="@dimen/padding3"
                    android:paddingEnd="@dimen/padding3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp"
                    android:visibility="visible"
                    app:tint="@color/spinnerbg" />


                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/padding40"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/edittext_color"
                    android:hint="Enter Phone Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="@dimen/padding5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp"
                    app:tint="@color/spinnerbg" />
            </LinearLayout>

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:id="@+id/error_mesg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_70dp"
                android:layout_marginBottom="@dimen/padding3"
                android:text="* This field is mandatory"
                android:textColor="@color/red"
                android:textSize="@dimen/txtsize_12"
                android:visibility="gone">

            </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_5dp">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5dp"
                    android:text="Email"
                    android:textSize="@dimen/dimen_15sp" />

                <EditText
                    android:id="@+id/edtMail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding40"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:background="@drawable/edittext_color"
                    android:hint="Enter your Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/padding5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp"
                    app:tint="@color/gray" />
            </LinearLayout>

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:id="@+id/errormesg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_70dp"
                android:text="* This field is mandatory"
                android:textColor="@color/red"
                android:textSize="@dimen/txtsize_12"
                android:visibility="gone">

            </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/padding20"
                android:layout_marginBottom="@dimen/padding25"
                android:background="@drawable/curved_save"
                android:fontFamily="@font/customfont"
                android:padding="@dimen/padding5"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_addmember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:text="First Name*"
                android:textSize="@dimen/dimen_15sp" />

            <EditText
                android:id="@+id/addfirstname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/padding5"
                android:background="@drawable/edittext_color"
                android:hint=""
                android:inputType="textPersonName"
                android:padding="@dimen/dimen_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_15sp"
                app:tint="@color/spinnerbg" />
        </LinearLayout>

        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:id="@+id/error_mesg_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/txtsize_10"
            android:layout_marginTop="@dimen/padding2"
            android:text="* This field is mandatory"
            android:textColor="@color/red"
            android:textSize="@dimen/txtsize_12"
            android:visibility="gone">

        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:text="Last Name*"
                android:textSize="@dimen/dimen_15sp" />

            <EditText
                android:id="@+id/addlastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/padding5"
                android:background="@drawable/edittext_color"
                android:hint=""
                android:inputType="textPersonName"
                android:padding="@dimen/dimen_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_15sp"
                app:tint="@color/gray" />
        </LinearLayout>

        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:id="@+id/errormesg_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/padding2"
            android:text="* This field is mandatory"
            android:textColor="@color/red"
            android:textSize="@dimen/txtsize_12"
            android:visibility="gone">

        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/padding20"
            android:layout_marginBottom="@dimen/padding25"
            android:background="@drawable/curved_save"
            android:fontFamily="@font/customfont"
            android:padding="@dimen/padding5"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>