<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding3"
    android:layout_marginRight="@dimen/padding3"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:orientation="vertical"
        android:padding="@dimen/padding5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_businessname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sony Latest"
                        android:textColor="@color/title_consu"
                        android:textSize="@dimen/txtsize_hint" />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5"
                        android:drawableLeft="@drawable/loc_new"
                        android:drawablePadding="3dp"
                        android:textColor="@color/sec_title_grey"
                        android:textSize="@dimen/txtsize_title_term_small"
                        android:visibility="gone" />


                </LinearLayout>
            </LinearLayout>

           <!-- <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/padding2"
                android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/img_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_favourite" />

            </LinearLayout>-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/txt_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:gravity="left"
                android:text="Root Canal for Melvin"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/txt_esttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:gravity="left"
                android:text="Your service Time:"
                android:textColor="@color/sec_title_grey"
                android:textSize="@dimen/txtsize_12" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding5"
        android:background="@color/app_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="Queue"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_12" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@color/app_background"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/txt_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="TOken"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/txt_personahead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="person"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />


            <TextView
                android:id="@+id/txt_partysizevalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="Party size"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />
                 </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:textColor="@color/title_grey"
            android:visibility="gone"
            android:textSize="@dimen/txtsize_12" />
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/padding5"
            android:textSize="@dimen/txtsize_12" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@color/app_background"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_prepaid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="#4DE2FF"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/txt_amtdue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding5"
            android:layout_marginLeft="@dimen/padding5"
            android:layout_marginRight="@dimen/padding5"
            android:layout_marginTop="@dimen/padding7"
            android:background="@color/view_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/app_background"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/icon_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_favourite_line"
                android:drawablePadding="2dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Favourite"
                android:textSize="@dimen/txtsize_12"/>

            <TextView
                android:id="@+id/icon_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:layout_weight="0.3"
                android:layout_marginLeft="@dimen/default_padding"
                android:drawableTop="@drawable/icon_message_gray"
                android:gravity="center"
                android:text="Enquiry"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/icon_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:drawablePadding="2dp"
                android:layout_weight="0.3"
                android:drawableTop="@drawable/icon_cancel_line"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/icon_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:drawablePadding="2dp"
                android:layout_weight="0.3"
                android:drawableTop="@drawable/icon_star_line"
                android:gravity="center"
                android:text="Rate"
                android:textSize="@dimen/txtsize_12" />
            <TextView
                android:id="@+id/icon_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:drawablePadding="2dp"
                android:layout_weight="0.3"
                android:drawableTop="@drawable/icon_receipt"
                android:gravity="center"
                android:text="Bill"
                android:textSize="@dimen/txtsize_12" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
