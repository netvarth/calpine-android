<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="@dimen/dimen_16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginBottom="@dimen/dimen_12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/cv_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_70dp"
                            android:layout_marginStart="@dimen/dimen_8dp">

                            <ImageView
                                android:id="@+id/iv_spImage"
                                android:layout_width="@dimen/dimen_70dp"
                                android:layout_height="@dimen/dimen_70dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_noimage" />
                        </LinearLayout>

                        <RatingBar
                            android:id="@+id/rb_ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:numStars="5"
                            android:visibility="gone"
                            android:progressDrawable="@drawable/rating_display" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:orientation="vertical">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                        android:id="@+id/tv_spName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:text=""
                                        android:textColor="@color/title_color"
                                        android:textSize="@dimen/dimen_18dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2">

                                    <ImageView
                                        android:id="@+id/iv_jaldeeVerified"
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_30dp"
                                        android:layout_centerInParent="true"
                                        android:visibility="visible">

                                    </ImageView>

                                </RelativeLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:orientation="vertical">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                        android:id="@+id/tv_specializations"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_4dp"
                                        android:layout_marginEnd="@dimen/dimen_5dp"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="Cardiology,Endoscopy"
                                        android:textColor="@color/title_color"
                                        android:textSize="14dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginTop="@dimen/dimen_8dp">

                                        <ImageView
                                            android:layout_width="@dimen/dimen_18dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/new_location"
                                            app:tint="@color/location_theme">

                                        </ImageView>

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                            android:id="@+id/tv_locationName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/dimen_1dp"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text=""
                                            android:textColor="@color/location_theme"
                                            android:textSize="@dimen/dimen_12dp">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                    </LinearLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/ll_estTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:orientation="vertical"
                                    android:visibility="visible">


                                    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dimen_65dp"
                                        app:neomorph_background_color="@color/neomorph_background_color"
                                        app:neomorph_corner_radius="@dimen/neomorph_view_corner_radius"
                                        app:neomorph_elevation="3dp"
                                        app:neomorph_highlight_color="@color/neomorph_highlight_color"
                                        app:neomorph_layer_type="software"
                                        app:neomorph_shadow_color="@color/neomorph_shadow_color"
                                        app:neomorph_shadow_type="inner"
                                        app:neomorph_shadow_visible="true"
                                        app:neomorph_view_type="rectangular">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                                android:id="@+id/tv_estWaitTime"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginStart="@dimen/dimen_5dp"
                                                android:layout_marginEnd="5dp"
                                                android:text=""
                                                android:textColor="@color/title_color"
                                                android:textSize="@dimen/dimen_8dp">

                                            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/dimen_5dp"
                                                android:layout_marginEnd="@dimen/dimen_5dp"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                                <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                                    android:id="@+id/tv_timeOrCount"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center"
                                                    android:text=""
                                                    android:textColor="@color/location_theme"
                                                    android:textSize="14dp">

                                                </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                                                <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                                    android:id="@+id/tv_timeOrCountHint"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="3dp"
                                                    android:text=""
                                                    android:textColor="@color/title_color"
                                                    android:textSize="@dimen/dimen_10dp">

                                                </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                                            </LinearLayout>


                                        </LinearLayout>

                                    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                                </LinearLayout>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_claimNow"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:cardElevation="@dimen/padding3"
                                    android:layout_gravity="bottom"
                                    android:visibility="gone"
                                    android:layout_weight="0.4"
                                    android:layout_marginBottom="@dimen/dimen_8dp"
                                    app:cardBackgroundColor="@color/neomorph_background_color"
                                    android:layout_marginEnd="@dimen/dimen_12dp"
                                    android:layout_marginStart="@dimen/dimen_12dp">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                        android:id="@+id/claimable"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/padding5"
                                        android:layout_marginTop="@dimen/padding2"
                                        android:layout_marginBottom="@dimen/padding2"
                                        android:gravity="center"
                                        android:paddingRight="@dimen/padding5"
                                        android:text="Claim it now"
                                        android:textColor="@color/location_theme"
                                        android:textSize="@dimen/dimen_12dp"
                                        android:visibility="visible" />

                                </androidx.cardview.widget.CardView>



                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.jaldeeinc.jaldee.custom.CustomItalicTextViewNormal
                        android:id="@+id/tv_serviceOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:justificationMode="inter_word"
                        android:letterSpacing="0.03"
                        android:text=""
                        android:textColor="@color/location_theme"
                        android:textSize="14dp" />

                    <com.jaldeeinc.jaldee.custom.CustomItalicTextViewNormal
                        android:id="@+id/tv_serviceTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:gravity="left"
                        android:justificationMode="inter_word"
                        android:letterSpacing="0.03"
                        android:text=""
                        android:textColor="@color/location_theme"
                        android:textSize="14dp" />

                    <com.jaldeeinc.jaldee.custom.CustomItalicTextViewNormal
                        android:id="@+id/tv_serviceThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_5dp"
                        android:gravity="left"
                        android:justificationMode="inter_word"
                        android:letterSpacing="0.03"
                        android:text=""
                        android:textColor="@color/location_theme"
                        android:textSize="14dp" />
                </LinearLayout>


                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_invalidAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:text=""
                    android:textColor="@color/title_grey_light"
                    android:textSize="@dimen/dimen_12dp"
                    android:visibility="gone">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>