<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fileList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/file"
            android:layout_width="@dimen/dimen_scrlimg_dp"
            android:layout_height="@dimen/dimen_scrlimg_dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10dp" />

        <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
            android:id="@+id/et_specialNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:background="@drawable/edittext"
            android:backgroundTint="@color/special_background"
            android:gravity="center"
            android:hint="Caption"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:scrollbars="horizontal"
            android:textSize="14dp"
            android:visibility="gone">

        </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>
    </LinearLayout>

    <ImageView
        android:id="@+id/deletefile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_delete" />

</LinearLayout>
