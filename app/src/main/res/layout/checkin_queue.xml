<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding15"
        android:layout_marginEnd="@dimen/padding15"
        android:layout_marginTop="@dimen/padding20">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Time"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:visibility="gone"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txtsize_14">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:padding="@dimen/padding5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/padding5"
            app:tint="@color/gray">

        </ImageView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_appoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:visibility="gone"
        android:orientation="vertical">

        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:letterSpacing="0.1"
            android:text=""
            android:textColor="@color/appoint_theme"
            android:textSize="@dimen/dimen_30sp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:letterSpacing="0.1"
            android:text=""
            android:layout_marginTop="@dimen/padding5"
            android:textColor="@color/appoint_theme"
            android:textSize="@dimen/dimen_18sp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>


    </LinearLayout>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change your new date"
        android:textSize="@dimen/txtsize_14"
        android:textAllCaps="true"
        android:textColor="@color/title_color"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding15">

    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding5"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp">


        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:layout_width="200dp"
            android:layout_height="@dimen/padding60"
            app:neomorph_shadow_type="outer"
            app:neomorph_layer_type="hardware"
            app:neomorph_background_color="#f2f2f2"
            app:neomorph_corner_radius="10dp"
            app:neomorph_elevation="3dp"
            app:neomorph_shadow_visible="true"
            app:neomorph_view_type="rectangular"
            android:layout_weight="0.2"
            app:neomorph_shadow_color="@color/light_grey"
            app:neomorph_highlight_color="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="@dimen/padding15"
                    android:layout_height="wrap_content"
                    android:src="@drawable/minus"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    app:tint="@color/location_theme">

                </ImageView>

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:id="@+id/tv_calenderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/txtsize_14"
                    android:textColor="@color/title_color"
                    android:layout_centerInParent="true">


                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>


                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="@dimen/padding15"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    app:tint="@color/location_theme">

                </ImageView>

            </RelativeLayout>

        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/fl_calender"
            android:layout_width="@dimen/dimen_65dp"
            android:layout_height="@dimen/padding60"
            app:neomorph_shadow_type="outer"
            app:neomorph_layer_type="hardware"
            app:neomorph_background_color="#F2f2f2"
            app:neomorph_corner_radius="10dp"
            app:neomorph_elevation="3dp"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_color="@color/light_grey"
            app:neomorph_highlight_color="@color/neomorph_highlight_color">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calen"
                app:tint="@color/location_theme"
                android:layout_gravity="center"/>

        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


    </LinearLayout>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your queue"
        android:textSize="@dimen/txtsize_14"
        android:textAllCaps="true"
        android:textColor="@color/title_color"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding15">

    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_queues"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding60"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:visibility="visible"
        android:scrollbars="horizontal"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_noSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/txtsize_10"
        android:layout_marginBottom="@dimen/txtsize_10"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/no_slots"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/confused"
            android:tintMode="multiply"
            app:tint="#f2f2f2">

        </ImageView>

        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:textColor="@color/title_color"
            android:text="No Queues available for selected date">

        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_waiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding15">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People in line"
            android:textSize="@dimen/txtsize_14"
            android:textAllCaps="true"
            android:textColor="@color/title_color"
            android:layout_gravity="center"
            >

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <LinearLayout
            android:id="@+id/ll_bigLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_10dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/padding45"
                android:textColor="@color/title_color">

            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_peopleHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/txtsize_14"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:textColor="@color/title_color">

            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>
            
            <com.jaldeeinc.jaldee.custom.CustomTextViewThin
                android:id="@+id/tv_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="50dp"
                android:layout_marginStart="@dimen/dimen_8dp">

            </com.jaldeeinc.jaldee.custom.CustomTextViewThin>

            <LinearLayout
                android:id="@+id/ll_estTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_gravity="center">

            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                android:id="@+id/tv_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/padding45"
                android:textColor="@color/title_color">

            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_minutesHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/txtsize_14"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:textColor="@color/title_color">

            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

            </LinearLayout>

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_serviceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/title_color"
                android:textSize="@dimen/padding25"
                android:layout_marginStart="@dimen/dimen_8dp">

            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">

            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>


        </LinearLayout>



    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding45"
        android:layout_marginStart="@dimen/padding15"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/padding15"
        android:layout_marginBottom="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/location_theme"
        app:cardCornerRadius="@dimen/padding3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ok"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_14">

            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>