<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@color/white"
        android:paddingEnd="@dimen/dimen_10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/padding3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding5"
                android:src="@mipmap/img_back_arrow"
                app:tint="@color/dark_blue">

            </ImageView>

        </androidx.cardview.widget.CardView>


        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/tv_spName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_18dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:text=""
            android:textColor="@color/dark_black"
            android:textSize="@dimen/dimen_16dp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>


    </LinearLayout>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/pressed_card"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cv_itemsCart"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginBottom="-10dp"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_insetBottom="@dimen/dimen_0dp"
        app:neumorph_insetEnd="@dimen/dimen_1dp"
        app:neumorph_insetStart="@dimen/dimen_1dp"
        app:neumorph_insetTop="@dimen/dimen_1dp"
        app:neumorph_shadowColorDark="#BEF2F2F2"
        app:neumorph_shadowColorLight="#BEF2F2F2"
        app:neumorph_shapeType="pressed">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:elevation="1dp">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">


                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:background="@color/white"
                            app:layout_collapseMode="parallax"
                            app:title="" />


                        <RelativeLayout
                            android:id="@+id/rl_image"
                            android:layout_width="match_parent"
                            android:layout_height="175dp"
                            android:background="#ffffff"
                            android:fitsSystemWindows="true"
                            android:orientation="horizontal"
                            app:layout_collapseMode="parallax">

                            <com.jaldeeinc.jaldee.custom.BorderImageView
                                android:id="@+id/iv_catalogImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                                android:id="@+id/shimmer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                app:baseColor="#F4F4F4"
                                app:deepColor="@color/white">

                            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

                        </RelativeLayout>


                    </com.google.android.material.appbar.CollapsingToolbarLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="pin">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dimen_15dp">

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/tv_catalogName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_8dp"
                                android:text="Catalog Name"
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/dimen_16dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>


                            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                android:id="@+id/tv_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_8dp"
                                android:layout_marginTop="@dimen/dimen_8dp"
                                android:visibility="visible"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/dimen_12dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_15dp"
                                android:layout_marginTop="@dimen/dimen_8dp"
                                android:layout_marginEnd="@dimen/dimen_5dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_homeDelivery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dimen_45dp"
                                        android:layout_height="@dimen/dimen_45dp"
                                        android:src="@drawable/home_delivery">

                                    </ImageView>

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/dimen_5dp"
                                        android:text="Home Delivery"
                                        android:textColor="@color/location_theme"
                                        android:textSize="14dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_storePickup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_15dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dimen_45dp"
                                        android:layout_height="@dimen/dimen_45dp"
                                        android:src="@drawable/instore_pickup">

                                    </ImageView>

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/dimen_5dp"
                                        android:text="Store Pickup"
                                        android:textColor="@color/location_theme"
                                        android:textSize="14dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </FrameLayout>

                </com.google.android.material.appbar.AppBarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5"
                        android:visibility="visible"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/ll_noItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_40dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/no_slots"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/confused">

                        </ImageView>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:text="No Items in this Catalog"
                            android:textColor="@color/title_color">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                    </LinearLayout>


                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    app:civ_border_color="@color/special_background"
                    app:civ_border_width="@dimen/padding2"
                    app:layout_anchor="@id/toolbar_layout"
                    app:layout_anchorGravity="bottom|center"
                    app:layout_collapseMode="pin" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </RelativeLayout>

    </soup.neumorphism.NeumorphCardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_itemsCart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:cardBackgroundColor="@color/dark_blue"
        app:cardElevation="@dimen/dimen_50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/dimen_5dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_arrow"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dimen_8dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:src="@drawable/arrow"
                        android:tint="@color/dark_blue">

                    </pl.droidsonroids.gif.GifImageView>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:orientation="vertical">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:id="@+id/tv_itemsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <com.jaldeeinc.jaldee.custom.AutofitTextView
                            android:id="@+id/tv_subTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:layout_weight="0.4"
                            android:textSize="@dimen/dimen_12dp"
                            autofit:minTextSize="8dp"
                            android:text=""
                            android:textColor="@color/white"
                            />

                        <com.jaldeeinc.jaldee.custom.AutofitTextView
                            android:id="@+id/tv_totalDiscount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:layout_marginStart="@dimen/dimen_8dp"
                            android:layout_weight="0.6"
                            android:textSize="14dp"
                            autofit:minTextSize="8dp"
                            android:text=""
                            android:textColor="@color/white"
                            />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@color/light_grey">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_viewcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:layout_weight="0.5">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="@dimen/dimen_65dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cart_icon"
                    android:tint="@color/white">

                </pl.droidsonroids.gif.GifImageView>


                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:text="View Cart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>