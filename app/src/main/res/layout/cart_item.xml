<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimen_8dp"
    android:layout_marginBottom="@dimen/dimen_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding20"
        android:paddingTop="@dimen/padding15"
        android:paddingRight="@dimen/padding20"
        android:paddingBottom="@dimen/padding15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:id="@+id/tv_itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/dimen_16dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>
                <LinearLayout
                    android:id="@+id/ll_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_below="@id/tv_itemName">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewLight
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen_12dp"
                        android:layout_marginRight="@dimen/dimen_10dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewLight>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewBoldItalic
                        android:id="@+id/tv_discountedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimen_12dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewBoldItalic>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_amount"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/edit_icon"
                        app:tint="@color/dark_blue">

                    </ImageView>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewBoldItalic
                        android:id="@+id/tv_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_2dp"
                        android:text="Add note"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/dimen_12dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewBoldItalic>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_itemDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_note"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:backgroundTint="@color/green1"
                    app:cardCornerRadius="@dimen/dimen_3dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:background="@color/green1"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:fontFamily="@font/font_semibold"
                            android:text="Item Details"
                            android:textColor="@color/green2"
                            android:textSize="@dimen/txtsize_12" />

                        <ImageView
                            android:layout_width="@dimen/dimen_12dp"
                            android:layout_height="@dimen/dimen_12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_arrow_down_gray"
                            app:tint="@color/green2">

                        </ImageView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">




                    <com.jaldeeinc.jaldee.custom.ElegantNumberButton
                        android:id="@+id/number_button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_amount"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="-5dp"
                        android:visibility="visible"
                        app:backgroundDrawable="@drawable/border_items"
                        app:textSize="6dp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_itemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginBottom="@dimen/dimen_25dp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>