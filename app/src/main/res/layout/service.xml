<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_gradient_home"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/hometopbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/default_padding"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/txt_toolbartitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@color/app_background"
            android:fontFamily="@font/customfont"
            android:minHeight="?attr/actionBarSize"
            android:textSize="@dimen/txtsize_subtitle"
            android:paddingLeft="@dimen/padding20"
            android:text="Title"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_noimage"
            android:scaleType="fitXY" />

        <!-- <ImageView
             android:id="@+id/img_servicesmall"
             android:layout_width="50dp"
             android:layout_gravity="left"
             android:layout_marginTop="@dimen/default_padding"
             android:layout_height="50dp" />-->

        <TextView
            android:id="@+id/txtservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:fontFamily="@font/customfont"
            android:text="RootCanal"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_subtitle"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textSize="@dimen/txtsize_hint"
                    android:textColor="@color/opaque_title_grey" />

                <TextView
                    android:id="@+id/txtduration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5"
                    android:fontFamily="@font/customfont"
                    android:text="30Mins"
                    android:textColor="@color/title_grey"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Lprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price (Rs)"
                    android:textSize="@dimen/txtsize_hint"
                    android:textColor="@color/opaque_title_grey" />

                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5"
                    android:fontFamily="@font/customfont"
                    android:text="200"
                    android:textColor="@color/title_grey"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Lprepayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prepayment Amount"
                android:textSize="@dimen/txtsize_hint"
                android:textColor="@color/opaque_title_grey" />

            <TextView
                android:id="@+id/txtpreVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:fontFamily="@font/customfont"
                android:text="200"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:text="Description"
            android:textSize="@dimen/txtsize_hint"
            android:textColor="@color/opaque_title_grey"
          />
        <TextView
            android:id="@+id/txtdescVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding7"
            android:text="Description"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_12" />


    </LinearLayout>
</LinearLayout>