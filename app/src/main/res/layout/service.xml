<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spinnerbg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/hometopbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/default_padding"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/txt_toolbartitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_bold"
            android:gravity="center|left"
            android:minHeight="?attr/actionBarSize"
            android:paddingLeft="@dimen/padding20"
            android:text="Title"
            android:textColor="@color/app_background"
            android:textSize="@dimen/txtsize_subtitle"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding5"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/icon_noimage" />

        <TextView
            android:id="@+id/txtservice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/font_bold"
            android:text="RootCanal"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_subtitle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdescVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:justificationMode="inter_word"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="@dimen/padding3"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/txtsize_12"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:id="@+id/Lprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price "
                        android:textColor="#3D3C44"
                        android:visibility="gone"
                        android:textSize="@dimen/txtsize_hint"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/indian_currency"
                        app:tint="@color/dark_blue">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/font_bold"
                        android:text=""
                        android:layout_marginStart="10dp"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_14"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_isTax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax Applicable"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="end">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/Lduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Duration "
                        android:textColor="#3D3C44"
                        android:textSize="@dimen/txtsize_hint"
                        android:visibility="gone"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/duration_icon">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtduration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/font_bold"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginStart="10dp"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_14"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/Lminvalue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min Amount "
                    android:textColor="#3D3C44"
                    android:textSize="@dimen/txtsize_hint"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtminValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/font_bold"
                    android:text=""
                    android:textColor="@color/title_grey"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Lmaxvalue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Max Amount "
                    android:textColor="#3D3C44"
                    android:textSize="@dimen/txtsize_hint"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtmaxvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/title_grey"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lmultiples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding5"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multiples "
                android:textColor="#3D3C44"
                android:textSize="@dimen/txtsize_hint"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtmultiples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/font_bold"
                android:text=""
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lprepayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prepayment Amount"
                android:textColor="@color/opaque_title_grey"
                android:textSize="@dimen/txtsize_hint" />

            <TextView
                android:id="@+id/txtpreVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:fontFamily="@font/font_bold"
                android:text="200"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginRight="5dp"
            android:text="Description"
            android:textColor="#AAAAAA"
            android:textSize="@dimen/txtsize_hint"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>