<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_card"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <com.jaldeeinc.jaldee.custom.BorderImageView
                    android:id="@+id/iv_itemImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerInside"
                    android:visibility="visible">

                </com.jaldeeinc.jaldee.custom.BorderImageView>


                <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                    android:id="@+id/shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone"
                    app:baseColor="#F4F4F4"
                    app:deepColor="@color/white">

                </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:background="#55000000">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x"
                            android:textColor="@color/white"
                            android:textSize="12dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="16dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                    </LinearLayout>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:id="@+id/tv_itemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:letterSpacing="0.03"
                    android:maxLines="2"
                    android:text="ice cream cake with masala and onionscravvings"
                    android:textColor="@color/dark_black"
                    android:textSize="14dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                <com.jaldeeinc.jaldee.custom.CustomTextViewBoldItalic
                    android:id="@+id/tv_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_itemName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/curved_save"
                    android:backgroundTint="@color/special_background"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="2dp"
                    android:text="Notes"
                    android:textColor="@color/black"
                    android:visibility="gone">

                </com.jaldeeinc.jaldee.custom.CustomTextViewBoldItalic>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>



