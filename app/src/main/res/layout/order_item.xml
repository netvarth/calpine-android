<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_card"
    android:layout_width="200dp"
    android:layout_height="215dp"
    android:layout_margin="@dimen/dimen_1dp"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jaldeeinc.jaldee.custom.BorderImageView
                android:id="@+id/iv_itemImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:scaleType="centerCrop"
                android:visibility="visible">

            </com.jaldeeinc.jaldee.custom.BorderImageView>


            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/shimmer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                app:baseColor="#F4F4F4"
                app:deepColor="@color/white">

            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:ellipsize="end"
                    android:layout_centerHorizontal="true"
                    android:letterSpacing="0.03"
                    android:maxLines="2"
                    android:text="Item name"
                    android:textColor="@color/dark_black"
                    android:textSize="14dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>



