<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/spinnerbg">
    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/hometopbar"
        android:orientation="vertical">


        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding5"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginRight="@dimen/padding5"
            android:layout_marginBottom="@dimen/default_padding"
            android:paddingBottom="@dimen/default_padding"
            card_view:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_background"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding15">



        <!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Time Slots Available"-->
<!--        android:textSize="@dimen/dimen_18sp"-->
<!--        android:layout_gravity="center"-->
<!--        android:gravity="center"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Date"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/padding5"
        android:layout_marginTop="@dimen/padding5"
        android:textSize="@dimen/dimen_16sp"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="-12dp"/>
        <TextView
            android:id="@+id/txt_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:gravity="center"
            android:text="Choose time window"
            android:textColor="@color/sec_title_grey"
            android:visibility="gone"
            android:textSize="@dimen/dimen_16sp"/>


        <LinearLayout
            android:id="@+id/queuelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding7"
            android:orientation="vertical"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/ic_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:src="@drawable/icon_left_angle_disabled" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/rounded_green_bg"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding3"
                    android:paddingBottom="@dimen/padding3">

                    <TextView
                        android:id="@+id/txt_queuetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="asfsdf"
                        android:textColor="@color/title_grey" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ic_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:src="@drawable/icon_right_angle_active" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:src="@drawable/icon_left_angle_disabled"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingTop="@dimen/padding3"
                    android:paddingBottom="@dimen/padding3">

                    <TextView

                        android:id="@+id/txt_personahead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="Person ahead"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_hint"
                        android:visibility="visible" />

                    <TextView

                        android:id="@+id/txt_waittime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="waitTime"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_hint" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:src="@drawable/icon_right_angle_active"
                    android:visibility="invisible" />
            </LinearLayout>


        </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/padding5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Time Slot"
        android:layout_marginLeft="@dimen/padding5"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/padding5"
        android:textSize="@dimen/dimen_16sp"/>
    <TextView
        android:id="@+id/noavailableslot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No available time slot for this queue"
        android:layout_marginLeft="@dimen/padding5"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/padding5"
        android:textSize="@dimen/dimen_16sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_time_slot"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/padding5">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding5"
       >

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="@dimen/dimen_16sp"-->
<!--            android:id="@+id/selected_date_time"-->
<!--            android:textColor="@color/black"-->
<!--            android:text="Selected Date and Time Slot is"-->
<!--            android:layout_marginLeft="@dimen/padding5"/>-->

        <Button
        android:id="@+id/btn_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/padding5"
        android:background="@color/blue"
        android:fontFamily="@font/customfont"
        android:gravity="center"
        android:text="Confirm"
        android:textAllCaps="true"
        android:textColor="@color/app_background"
        android:textSize="@dimen/txtsize_subtitle"
        android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>
        </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>