<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaldeeinc.jaldee.activities.ViewAttachmentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/dark_blue">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            app:cardBackgroundColor="@color/dark_blue"
            app:cardElevation="0dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding5"
                android:src="@drawable/img_back_arrow"
                app:tint="@color/white">

            </ImageView>

        </androidx.cardview.widget.CardView>
        <com.jaldeeinc.jaldee.custom.CustomAutoSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Attachments preview"
            android:textColor="@color/white"
            android:textSize="18dp">

        </com.jaldeeinc.jaldee.custom.CustomAutoSemiBold>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.jaldeeinc.jaldee.CustomSwipe.DiscreteScrollView
            android:id="@+id/rv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.jaldeeinc.jaldee.CustomSwipe.DiscreteScrollView>


    </LinearLayout>

</FrameLayout>