<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaldeeinc.jaldee.activities.ViewAttachmentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/dark_blue">

        <com.jaldeeinc.jaldee.custom.CustomAutoSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attachments preview"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true">

        </com.jaldeeinc.jaldee.custom.CustomAutoSemiBold>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.jaldeeinc.jaldee.CustomSwipe.DiscreteScrollView
            android:id="@+id/rv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.jaldeeinc.jaldee.CustomSwipe.DiscreteScrollView>


    </LinearLayout>

</FrameLayout>