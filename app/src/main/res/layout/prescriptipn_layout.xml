<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp">
    <com.jaldeeinc.jaldee.widgets.TouchWebView
        android:id="@+id/webview"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:padding="@dimen/default_padding"
        android:visibility="gone"/>
    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/presc_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/ripple_effect_1"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="Download Prescription"
        android:textAllCaps="false"
        android:textColor="@color/location_theme"/>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/presc_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/ripple_effect_1"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:text="Share Prescription"
        android:textAllCaps="false"
        android:textColor="@color/appoint_theme"/>

</LinearLayout>