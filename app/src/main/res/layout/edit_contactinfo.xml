<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_curved"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding15"
        android:layout_marginTop="@dimen/padding20"
        android:layout_marginEnd="@dimen/padding15">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Change Time"
            android:textAllCaps="true"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txtsize_14"
            android:visibility="gone">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/padding5"
            android:padding="@dimen/padding5"
            android:src="@drawable/close"
            android:visibility="visible"
            app:tint="@color/gray">

        </ImageView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Booking alerts and communications send to"
            android:textSize="14sp" />


        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding5"
            android:text="* All fields are mandatory"
            android:textColor="@color/red"
            android:textSize="15dp"
            android:visibility="invisible">

        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding3"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Phone"
                android:textSize="15sp" />

            <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/padding40"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/edittext_color"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="Country Code"
                android:inputType="phone"
                android:maxLength="4"
                android:paddingStart="@dimen/padding3"
                android:paddingEnd="@dimen/padding3"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible"
                app:tint="@color/spinnerbg" />

            <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/padding40"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.8"
                android:background="@drawable/edittext_color"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingStart="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:tint="@color/spinnerbg" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding3"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Email"
                android:textSize="15sp" />

            <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding40"
                android:layout_marginLeft="8dp"
                android:background="@drawable/edittext_color"
                android:hint="Enter your Email"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/padding5"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:tint="@color/gray" />
        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding45"
        android:layout_marginStart="@dimen/padding15"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/padding15"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/dark_blue"
        app:cardCornerRadius="@dimen/padding3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OK"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_14">

            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>