<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey14"
    android:orientation="vertical"
    tools:context="com.jaldeeinc.jaldee.activities.AppointmentActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_4dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_15dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dimen_7dp"
                            android:src="@mipmap/img_back_arrow"
                            app:tint="@color/blue2">

                        </ImageView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_providerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/font_semibold"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/black2"
                        android:textFontWeight="600"
                        android:textSize="@dimen/dimen_14dp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/dimen_12dp"
        android:orientation="vertical"
        android:weightSum="11">

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_weight="9">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_2dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimen_2dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="@dimen/dimen_0dp">

                        <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                            android:id="@+id/shimmer"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:visibility="visible"
                            app:baseColor="#F4F4F4"
                            app:deepColor="@color/white">

                        </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

                        <ImageView
                            android:id="@+id/iv_service_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/left_curved"
                            android:visibility="gone" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingRight="@dimen/dimen_5dp">

                        <TextView
                            android:id="@+id/tv_serviceName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_semibold"
                            android:text=""
                            android:textColor="@color/blue3"
                            android:textSize="@dimen/dimen_15dp" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:scrollbarSize="@dimen/dimen_0dp"
                            android:scrollbars="vertical">

                            <TextView
                                android:id="@+id/tv_description"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/font_regular"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/grey7"
                                android:textSize="@dimen/dimen_10dp" />
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="@dimen/dimen_2dp"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="@dimen/dimen_2dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/ll_5"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:minHeight="70dp"
                        android:paddingBottom="@dimen/dimen_10dp">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_12dp"
                            android:layout_marginBottom="@dimen/dimen_12dp">

                            <LinearLayout
                                android:id="@+id/ll_mainLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_8dp"
                                    android:layout_marginTop="@dimen/dimen_8dp"
                                    android:layout_marginEnd="@dimen/dimen_8dp"
                                    android:fontFamily="@font/font_regular"
                                    android:gravity="center"
                                    android:text="Please provide us with little more information to complete your booking"
                                    android:textColor="@color/dark_black"
                                    android:textSize="@dimen/dimen_14dp"
                                    android:visibility="gone">

                                </TextView>>

                            </LinearLayout>

                        </ScrollView>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_total_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/ll_5"
                        android:layout_below="@id/ll_4"
                        android:layout_alignParentBottom="true"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dimen_20dp"
                        android:paddingTop="@dimen/dimen_12dp"
                        android:paddingRight="@dimen/dimen_20dp"
                        android:paddingBottom="@dimen/dimen_12dp"
                        android:weightSum="2"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_medium"
                            android:text="Total Price :"
                            android:textColor="@color/black4"
                            android:textSize="@dimen/dimen_16dp" />

                        <TextView
                            android:id="@+id/tv_total_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font_medium"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/black4"
                            android:textSize="@dimen/dimen_16dp" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_submit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/padding45"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        app:cardBackgroundColor="@color/blue3"
                        app:cardCornerRadius="@dimen/dimen_8dp"
                        android:alpha="0.3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/tv_buttonName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/font_semibold"
                                android:text="NEXT"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_14sp">

                            </TextView>

                            <ImageView
                                android:id="@+id/iv_next"
                                android:layout_width="@dimen/dimen_20dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dimen_5dp"
                                android:paddingTop="@dimen/padding2"
                                android:paddingBottom="@dimen/padding2"
                                android:src="@drawable/rightarrow"
                                app:tint="@color/white">

                            </ImageView>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>