<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:background="@drawable/rctngle_bordergrey_roundededge15_whitefilled"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_acountdelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding20"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:layout_marginRight="@dimen/padding20"
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:background="@color/app_background"
            android:orientation="vertical"
            android:padding="@dimen/padding15"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_medium"
                android:gravity="left"
                android:text="Email Address"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/padding3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_regular"
                    android:text="Email"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/dimen_12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/padding40"
                        android:layout_weight="0.78"
                        android:background="@drawable/edittext_color"
                        android:hint="Enter email"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingStart="@dimen/padding5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1dp"
                    android:fontFamily="@font/font_regular"
                    android:text="Please enter valid email"
                    android:textColor="@color/red6"
                    android:textSize="@dimen/dimen_12dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_coupon_cb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <CheckBox
                        android:id="@+id/cb_mail_update_to_myaccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:buttonTint="@color/blue"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text="Update Email to 'My Account'"
                        android:textColor="@color/black9"
                        android:textSize="@dimen/txtsize_12" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cv_bottom"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_above="@id/cv_submit"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding5"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/grey19"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/tv_addNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font_regular"
                            android:text="CANCEL"
                            android:textAllCaps="true"
                            android:textColor="@color/location_theme"
                            android:textSize="@dimen/txtsize_12">

                        </TextView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding5"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blue5"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/attach_file_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="OK"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txtsize_12">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_penguin"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goodbye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding20"
            android:layout_marginRight="@dimen/padding20"
            android:layout_marginBottom="@dimen/dimen_25dp"
            android:background="@color/app_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding15"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_medium"
                android:gravity="center"
                android:text="Goodbye!"
                android:textColor="@color/black"
                android:textSize="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:fontFamily="@font/font_regular"
                android:gravity="center"
                android:text="Your account has been deleted"
                android:textColor="@color/grey27"
                android:textSize="@dimen/dimen_15dp" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_penguin" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
