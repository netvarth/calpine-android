<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding3"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/padding5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_meetingCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding5"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="120dp"
                android:layout_height="20dp"
                app:baseColor="@color/fadedgrey"
                app:deepColor="@color/white">
            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/tv_startTime"
                android:layout_width="120dp"
                android:layout_height="20dp"
                app:baseColor="@color/fadedgrey"
                android:layout_marginTop="@dimen/txtsize_12"
                app:deepColor="@color/white">
            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/txtsize_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_startTime">

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="80dp"
                android:layout_height="12dp"
                app:baseColor="@color/fadedgrey"
                app:deepColor="@color/white">
            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/tv_endTime"
                android:layout_width="80dp"
                android:layout_height="@dimen/txtsize_10"
                android:layout_marginTop="8dp"
                app:baseColor="@color/fadedgrey"
                app:deepColor="@color/white">
            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

        </LinearLayout>

        <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
            android:layout_width="80dp"
            android:layout_height="@dimen/txtsize_10"
            app:baseColor="@color/fadedgrey"
            app:deepColor="@color/white"
            android:layout_marginBottom="@dimen/txtsize_10"
            android:layout_marginEnd="@dimen/padding5"
            android:layout_marginTop="@dimen/padding20"
            app:layout_constraintTop_toBottomOf="@id/ll_endTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


