<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_meetingCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="50dp"
                android:layout_height="20dp"
                app:baseColor="@color/fadedgrey"
                app:deepColor="@color/white">
            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/tv_startTime"
                android:layout_width="50dp"
                android:layout_height="20dp"
                app:baseColor="@color/fadedgrey"
                android:layout_marginTop="8dp"
                app:deepColor="@color/white">
            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_startTime">

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="50dp"
                android:layout_height="20dp"
                app:baseColor="@color/fadedgrey"
                app:deepColor="@color/white">
            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/tv_endTime"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                app:baseColor="@color/fadedgrey"
                app:deepColor="@color/white">
            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/fadedgrey"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/ll_startTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        </LinearLayout>

        <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
            android:id="@+id/tv_meetingName"
            android:layout_width="150dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ll_divider"
            android:layout_marginTop="10dp"
            app:baseColor="@color/fadedgrey"
            app:deepColor="@color/white"
            android:layout_marginLeft="8dp">


        </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_meetingName"
            app:layout_constraintStart_toEndOf="@id/ll_divider">

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:baseColor="@color/fadedgrey"
                app:deepColor="@color/white">

            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

            <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                android:id="@+id/tv_hostName"
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:baseColor="@color/fadedgrey"
                app:deepColor="@color/white">

            </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>


