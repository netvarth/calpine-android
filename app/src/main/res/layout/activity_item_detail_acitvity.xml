<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingEnd="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/padding3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding5"
                android:src="@drawable/img_back_arrow"
                app:tint="@color/dark_blue">

            </ImageView>

        </androidx.cardview.widget.CardView>


        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/tv_spName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="5dp"
            android:letterSpacing="0.03"
            android:text="Detail page"
            android:textAllCaps="false"
            android:textColor="@color/dark_black"
            android:textSize="16dp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>


    </RelativeLayout>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/pressed_card"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cv_itemsCart"
        android:layout_marginTop="60dp"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_insetBottom="0dp"
        app:neumorph_insetEnd="1dp"
        app:neumorph_insetStart="1dp"
        app:neumorph_insetTop="1dp"
        app:neumorph_shadowColorDark="#BEF2F2F2"
        app:neumorph_shadowColorLight="#BEF2F2F2"
        app:neumorph_shapeType="pressed">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/cv_itemsCart"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/iv_displayImage"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:visibility="visible">

                    </ImageView>

                    <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                        android:id="@+id/shimmer"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:visibility="gone"
                        app:baseColor="#F4F4F4"
                        app:deepColor="@color/white">

                    </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/special_background">

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp">

                </androidx.recyclerview.widget.RecyclerView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                        android:id="@+id/tv_itemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Item Name"
                        android:textColor="@color/dark_black"
                        android:textSize="20dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:id="@+id/tv_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="*Out of Stock"
                        android:textColor="@color/red"
                        android:textSize="20dp"
                        android:visibility="gone">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:orientation="vertical">

                            <com.jaldeeinc.jaldee.custom.CustomTextViewLight
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="18dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewLight>

                            <com.jaldeeinc.jaldee.custom.CustomTextViewBoldItalic
                                android:id="@+id/tv_discountedPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-4dp"
                                android:text=""
                                android:textColor="@color/dark_black"
                                android:textSize="25dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewBoldItalic>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/light_gray">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_actions"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.3"
                            android:orientation="horizontal">


                            <FrameLayout
                                android:id="@+id/fl_add"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:background="@drawable/border_items"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:src="@drawable/add"
                                    app:tint="@color/dark_blue">

                                </ImageView>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="25dp"
                                    android:paddingTop="2dp"
                                    android:paddingEnd="25dp"
                                    android:paddingBottom="4dp"
                                    android:text="ADD"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="15dp">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                            </FrameLayout>


                            <com.jaldeeinc.jaldee.custom.ElegantNumberButton
                                android:id="@+id/number_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                app:backgroundDrawable="@drawable/border_items"
                                app:textSize="6dp" />


                        </LinearLayout>


                    </LinearLayout>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                        android:id="@+id/tv_itemDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textColor="@color/title_color"
                        android:textSize="14dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/special_background">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:id="@+id/tv_similarItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Similar Items"
                        android:textColor="@color/dark_blue"
                        android:textSize="25dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <com.jaldeeinc.jaldee.CustomSwipe.DiscreteScrollView
                            android:id="@+id/rv_items"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </com.jaldeeinc.jaldee.CustomSwipe.DiscreteScrollView>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </soup.neumorphism.NeumorphCardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_itemsCart"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:cardBackgroundColor="@color/dark_blue"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/arrow"
                        android:tint="@color/dark_blue">

                    </pl.droidsonroids.gif.GifImageView>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:orientation="vertical">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:id="@+id/tv_itemsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">


                        <com.jaldeeinc.jaldee.custom.AutofitTextView
                            android:id="@+id/tv_subTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            autofit:minTextSize="8dp" />

                        <com.jaldeeinc.jaldee.custom.AutofitTextView
                            android:id="@+id/tv_totalDiscount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0.6"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            autofit:minTextSize="8dp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/light_grey">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_viewcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cart_icon"
                    android:tint="@color/white">

                </pl.droidsonroids.gif.GifImageView>


                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:text="View Cart"
                    android:textColor="@color/white"
                    android:textSize="18dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>