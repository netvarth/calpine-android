<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@color/white"
        android:paddingEnd="@dimen/dimen_10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/padding3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding5"
                android:src="@mipmap/img_back_arrow"
                app:tint="@color/dark_blue">

            </ImageView>

        </androidx.cardview.widget.CardView>


        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/tv_spName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_18dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:text="Cart"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:letterSpacing="0.03"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/dimen_16dp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/cv_itemsCart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_25dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginEnd="@dimen/dimen_5dp">

                <ImageView
                    android:id="@+id/iv_displayImage"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="visible">

                </ImageView>

                <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                    android:id="@+id/shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="gone"
                    app:baseColor="#F4F4F4"
                    app:deepColor="@color/white">

                </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_5dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:background="@drawable/dash_gap">

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginEnd="8dp">

            </androidx.recyclerview.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:orientation="vertical">

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Item Name"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/dimen_20dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.6">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/dimen_25dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                            android:id="@+id/tv_discountedPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:text=""
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/dimen_25dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                        <LinearLayout
                            android:layout_width="@dimen/dimen_1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dimen_25dp"
                            android:background="@color/light_gray">

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">


                        <FrameLayout
                            android:id="@+id/fl_add"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_25dp"
                            android:background="@drawable/border_items"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="@dimen/dimen_5dp"
                                android:layout_height="@dimen/dimen_5dp"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginEnd="@dimen/dimen_10dp"
                                android:src="@drawable/add"
                                app:tint="@color/dark_blue">

                            </ImageView>

                            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/dimen_25dp"
                                android:paddingTop="@dimen/dimen_2dp"
                                android:paddingEnd="@dimen/dimen_25dp"
                                android:paddingBottom="@dimen/dimen_4dp"
                                android:text="ADD"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/dimen_15dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                        </FrameLayout>


                        <com.jaldeeinc.jaldee.custom.ElegantNumberButton
                            android:id="@+id/number_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:backgroundDrawable="@drawable/border_items"
                            app:textSize="6dp" />


                    </LinearLayout>


                </LinearLayout>

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_itemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:text="Long Description about the item will be here"
                    android:textColor="@color/title_color"
                    android:textSize="14dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_itemsCart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_65dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:cardBackgroundColor="@color/dark_blue"
        app:cardElevation="@dimen/dimen_50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_arrow"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dimen_8dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:src="@drawable/arrow"
                        android:tint="@color/dark_blue">

                    </pl.droidsonroids.gif.GifImageView>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:orientation="vertical">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:id="@+id/tv_itemsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_16dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_subTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="14dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                            android:id="@+id/tv_totalDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/dimen_8dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_16dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@color/light_grey">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_viewcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="@dimen/dimen_65dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cart_icon"
                    android:tint="@color/white">

                </pl.droidsonroids.gif.GifImageView>


                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_4dp"
                    android:text="View Cart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>