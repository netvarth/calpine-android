<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/chat_sent"
        android:orientation="vertical">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:id="@+id/tv_sentMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:autoLink="web|phone"
            android:gravity="end"
            android:padding="@dimen/dimen_10dp"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="@dimen/txtsize_12">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <LinearLayout
            android:id="@+id/attach_sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/white"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_sent1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_noimage">

            </ImageView>

            <ImageView
                android:id="@+id/img_sent2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_noimage">

            </ImageView>

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:id="@+id/tv_attach_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:gravity="center"
                android:text="+1 more"
                android:textColor="@color/sender_color"
                android:textSize="@dimen/dimen_12sp"
                android:visibility="gone"></com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>


        </LinearLayout>
    </LinearLayout>

    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/recyclerImage"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:nestedScrollingEnabled="false"-->
    <!--        android:scrollbars="horizontal" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:id="@+id/tv_messageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:text=""
            android:textColor="@color/location_theme"
            android:textSize="@dimen/txtsize_10">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <com.jaldeeinc.jaldee.custom.CustomTextViewRegularItalic
            android:id="@+id/tv_sentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:text="12:58 PM"
            android:textSize="@dimen/txtsize_10">

        </com.jaldeeinc.jaldee.custom.CustomTextViewRegularItalic>

    </LinearLayout>


</LinearLayout>