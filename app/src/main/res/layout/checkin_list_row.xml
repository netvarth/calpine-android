<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lcheckin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttoken"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="left"
            android:maxLines="1"
            android:text="Token"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_12" />



        <TextView
            android:id="@+id/txtservice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:gravity="left"
            android:maxLines="1"
            android:text="time"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_12" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="left"
            android:text="Name"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_12" />


        <TextView
            android:id="@+id/txtwaittime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="time"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_12" />
        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_delete_small" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_border" />


</LinearLayout>