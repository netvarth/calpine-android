<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">

        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Notes"
            android:layout_centerVertical="true"
            android:letterSpacing="0.05"
            android:textColor="@color/location_theme"
            android:textSize="@dimen/txtsize_14">

        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            app:tint="@color/title_grey_light">

        </ImageView>

    </RelativeLayout>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/tv_customerNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp">

    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

</LinearLayout>