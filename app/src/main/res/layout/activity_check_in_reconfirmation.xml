<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaldeeinc.jaldee.activities.ReconfirmationActivity">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottomLayout"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:background="@color/white"
            android:paddingEnd="@dimen/dimen_10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/padding3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding5"
                    android:src="@mipmap/img_back_arrow"
                    app:tint="@color/dark_blue">

                </ImageView>

            </androidx.cardview.widget.CardView>


            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Review and Confirm"
                android:textColor="@color/location_theme"
                android:textSize="@dimen/dimen_16dp">

            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

        </RelativeLayout>


        <soup.neumorphism.NeumorphCardView
            android:id="@+id/pressed_card"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/cv_submit"
            android:layout_below="@id/toolbar"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_insetBottom="@dimen/dimen_0dp"
            app:neumorph_insetEnd="@dimen/dimen_1dp"
            app:neumorph_insetStart="@dimen/dimen_1dp"
            app:neumorph_insetTop="@dimen/dimen_1dp"
            app:neumorph_shadowColorDark="#BEF2F2F2"
            app:neumorph_shadowColorLight="#BEF2F2F2"
            app:neumorph_shapeType="pressed">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_12dp">


                        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                            android:id="@+id/tv_providerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/dimen_16dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/new_location"
                                app:tint="@color/location_theme">

                            </ImageView>

                            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                android:id="@+id/tv_locationName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/padding3"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/location_theme"
                                android:textSize="@dimen/txtsize_12">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="6dp">

                            <ImageView
                                android:id="@+id/iv_serviceIcon"
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical">

                            </ImageView>

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/tv_serviceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/padding3"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_15dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/special_background"
                            app:cardCornerRadius="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_15dp"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="10dp"
                                android:paddingTop="@dimen/dimen_10dp">

                                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                    android:id="@+id/tvBookingForHint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CheckIn for"
                                    android:textSize="@dimen/dimen_12dp"
                                    android:layout_gravity="center">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:id="@+id/tv_customerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:textSize="@dimen/dimen_16dp"
                                    android:textColor="@color/location_theme">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:id="@+id/tv_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:textSize="@dimen/dimen_12dp"
                                    android:textColor="@color/location_theme">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:id="@+id/tv_phoneNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:textSize="@dimen/dimen_12dp"
                                    android:textColor="@color/location_theme">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_appointment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/special_background"
                            app:cardCornerRadius="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_15dp"
                            android:layout_marginBottom="@dimen/dimen_10dp"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_marginEnd="@dimen/dimen_5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="10dp"
                                android:paddingTop="@dimen/dimen_10dp">

                                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                    android:id="@+id/tv_timeHint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CheckIn time"
                                    android:textSize="@dimen/dimen_12dp"
                                    android:layout_gravity="center">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:id="@+id/tv_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:textSize="@dimen/dimen_18dp"
                                    android:textColor="@color/location_theme">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:id="@+id/tv_waitingInLine"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:textSize="@dimen/dimen_18dp"
                                    android:textColor="@color/location_theme">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/LservicePrepay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:layout_marginTop="@dimen/padding7"
                        android:layout_marginRight="@dimen/default_padding"
                        android:background="@drawable/input_border_gray_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/default_padding"
                        android:visibility="gone">


                        <LinearLayout
                            android:id="@+id/ll_serviceamount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding2"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/txtservicepayment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/padding2"
                                android:gravity="center"
                                android:text="Service fee"
                                android:textColor="@color/title_grey"
                                android:textSize="@dimen/dimen_14sp" />

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/txtserviceamount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text=" "
                                android:textColor="@color/title_grey"
                                android:textSize="@dimen/dimen_16dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_prepay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/txtprepay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/padding2"
                                android:gravity="center"
                                android:text="@string/serve_prepay"
                                android:textColor="@color/title_grey"
                                android:textSize="@dimen/dimen_14sp" />

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/txtprepayamount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/title_grey"
                                android:textSize="@dimen/dimen_16dp" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </soup.neumorphism.NeumorphCardView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/ll_paymentOptions"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_paytm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding5"
                android:layout_weight="1"
                app:cardBackgroundColor="#F2F2F2"
                app:cardElevation="@dimen/padding2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/padding15"
                        android:layout_height="@dimen/padding20"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_document"
                        android:visibility="gone"
                        app:tint="@color/location_theme" />

                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                        android:id="@+id/tv_paytm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/padding3"
                        android:text="Paytm"
                        android:textAllCaps="true"
                        android:textColor="@color/location_theme"
                        android:textSize="@dimen/txtsize_12">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_razorpay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding5"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/location_theme"
                app:cardElevation="@dimen/padding2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dimen_18sp"
                        android:layout_height="@dimen/padding20"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/icon_attachments"
                        app:tint="@color/location_theme" />

                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                        android:id="@+id/tv_razorpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/padding3"
                        android:text="CC/DC/Net Banking/UPI"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_12">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding45"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/padding5"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            app:cardBackgroundColor="@color/location_theme"
            app:cardCornerRadius="@dimen/padding3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_buttonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Confirm "
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18sp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                <ImageView
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_16sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/txtsize_10"
                    android:src="@drawable/rightarrow"
                    app:tint="@color/white">

                </ImageView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>