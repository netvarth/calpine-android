<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_gradient_home"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/hometopbar"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar" />
    </LinearLayout>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding5"
        android:layout_marginLeft="@dimen/padding5"
        android:layout_marginRight="@dimen/padding5"
        android:layout_marginTop="@dimen/default_padding"

        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_background"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <TextView
                android:id="@+id/text_input_layout_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FirstName"
                android:textColor="@color/sec_title_grey"
                android:textSize="@dimen/txtsize_hint" />

            <EditText
                android:id="@+id/txt_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:background="@drawable/rounded_lightgrey_bg"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textPersonName"
                android:padding="@dimen/padding5"
                android:textColor="@color/title_grey"
                android:textColorHint="@color/title_grey"
                android:textSize="@dimen/txtsize_subtitle" />


            <TextView
                android:id="@+id/text_input_layout_lastnme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LastName"
                android:layout_marginTop="@dimen/default_padding"
                android:textColor="@color/sec_title_grey"
                android:textSize="@dimen/txtsize_hint" />

            <EditText
                android:id="@+id/txt_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textPersonName"
                android:background="@drawable/rounded_lightgrey_bg"
                android:padding="@dimen/padding5"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_subtitle" />
            <Button
                android:id="@+id/btn_savemember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                android:layout_marginBottom="@dimen/padding5"
                android:background="@drawable/roundedrect_blue"
                android:fontFamily="@font/customfont"
                android:text="Save Member"
                android:textAllCaps="false"
                android:textColor="@color/app_background"
                android:textSize="@dimen/txtsize_hint"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>