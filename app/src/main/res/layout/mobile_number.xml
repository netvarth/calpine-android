<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.design="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtsize_12"
            android:layout_marginTop="@dimen/padding30"
            android:textColor="@color/title_color"
            android:layout_marginStart="@dimen/padding15"
            android:text="Details will be saved to your profile">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/padding40"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/padding3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/edittext"
                app:ccp_showFlag="false"
                app:ccp_showNameCode="false"
                android.support.design:ccp_textSize="@dimen/dimen_12dp"
                app:ccp_autoDetectCountry="true"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et_Ccode"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/padding40"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/padding5"
                android:layout_marginEnd="@dimen/padding15"
                android:paddingStart="@dimen/txtsize_10"
                android:paddingEnd="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:paddingTop="@dimen/padding5"
                android:gravity="center"
                android:paddingBottom="@dimen/padding3"
                android:textSize="@dimen/dimen_15sp"
                android:maxLength="15"
                android:inputType="number"
                android:background="@drawable/edittext"
                android:hint="Enter Country Code"
                android:textColor="@color/title_grey"
                />

        <EditText
            android:id="@+id/et_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding40"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/padding5"
            android:layout_marginEnd="@dimen/padding15"
            android:paddingStart="@dimen/txtsize_10"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:paddingTop="@dimen/padding5"
            android:paddingBottom="@dimen/padding3"
            android:textSize="@dimen/dimen_15sp"
            android:maxLength="10"
            android:inputType="number"
            android:background="@drawable/edittext"
            android:hint="Enter Mobile Number"
            android:textColor="@color/title_grey"
            />

        </LinearLayout>


    </LinearLayout>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/error_mesg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding5"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:text="* This field is manditory"
        android:textSize="@dimen/txtsize_12"
        android:visibility="gone"
        android:textColor="@color/red">

    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding40"
        android:layout_marginTop="@dimen/padding20"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_25dp"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="@color/white"
        android:text="Submit"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:padding="@dimen/padding5"
        android:background="@drawable/curved_save"
        android:fontFamily="@font/customfont"
        android:layout_gravity="center"/>

</LinearLayout>