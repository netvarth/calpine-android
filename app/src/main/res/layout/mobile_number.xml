<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txtsize_12"
            android:layout_marginTop="@dimen/padding30"
            android:textColor="@color/title_color"
            android:layout_marginStart="@dimen/padding15"
            android:text="Details will be saved to your profile">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <EditText
            android:id="@+id/et_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding15"
            android:layout_marginEnd="@dimen/padding15"
            android:paddingStart="@dimen/txtsize_10"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:paddingTop="@dimen/padding5"
            android:paddingBottom="@dimen/padding3"
            android:textSize="@dimen/dimen_15sp"
            android:maxLength="10"
            android:inputType="number"
            android:background="@drawable/edittext"
            android:hint="Enter Mobile Number"
            android:textColor="@color/title_grey"/>


    </LinearLayout>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/error_mesg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding5"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:text="* This field is manditory"
        android:textSize="@dimen/txtsize_12"
        android:visibility="gone"
        android:textColor="@color/red">

    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding40"
        android:layout_marginTop="@dimen/padding20"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_25dp"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="@color/white"
        android:text="Submit"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:padding="@dimen/padding5"
        android:background="@drawable/curved_save"
        android:fontFamily="@font/customfont"
        android:layout_gravity="center"/>

</LinearLayout>