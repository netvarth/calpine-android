<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_booking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding5"
    app:cardCornerRadius="@dimen/padding15"
    app:cardElevation="@dimen/padding5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bookingType"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp">

        </ImageView>

        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding3"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/txtsize_12"
            android:orientation="vertical">
            <!--<androidx.cardview.widget.CardView
                android:id="@+id/cv_qnr_info_needed"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding5"
                app:cardCornerRadius="@dimen/padding15"
                app:cardElevation="@dimen/padding5"
                app:cardBackgroundColor="@color/red"
                android:visibility="gone"
                android:backgroundt="@drawable/custom_status"
                layout_gravity="end">

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_qnr_info_needed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/padding3"
                    android:text="Info Needed"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:layout_gravity="center">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

            </androidx.cardview.widget.CardView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="8">

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_spName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/title_color"
                    android:textSize="18sp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding5"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_qnr_info_needed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding2"
                        android:layout_marginBottom="@dimen/padding2"
                        android:background="@drawable/custom_status"
                        android:backgroundTint="@color/red"
                        android:visibility="gone">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_qnr_info_needed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="@dimen/padding3"
                            android:paddingBottom="@dimen/padding3"
                            android:text="Info Needed"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:visibility="visible">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding2"
                        android:layout_marginBottom="@dimen/padding2"
                        android:background="@drawable/custom_status">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingStart="8dp"
                            android:paddingTop="@dimen/padding3"
                            android:paddingEnd="2dp"
                            android:paddingBottom="@dimen/padding3"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:visibility="visible">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:id="@+id/tv_providerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/title_color"
                android:textSize="16sp"
                android:visibility="gone">

            </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/padding3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:id="@+id/iv_serviceIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Order # :">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_serviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/title_color"
                    android:textSize="16sp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_quantitiy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">


                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/padding3"
                    android:text="Quantity : ">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_quantityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding3"
                    android:layout_marginTop="@dimen/padding3"
                    android:layout_marginEnd="40dp"
                    android:layout_toRightOf="@+id/tv_quantity"
                    android:text=""
                    android:textColor="@color/location_theme"
                    android:textSize="14dp">


                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>
            </RelativeLayout>

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_dateAndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/padding3"
                android:layout_marginEnd="40dp"
                android:text=""
                android:textColor="@color/location_theme"
                android:textSize="14dp">

            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/padding3"
                    android:layout_marginEnd="40dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="14dp"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/more"
                    android:visibility="visible"
                    app:tint="@color/title_color">

                </ImageView>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>