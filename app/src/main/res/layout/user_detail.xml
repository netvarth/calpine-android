<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_exapnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/subLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/locationlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="5dp">


                    <LinearLayout
                        android:id="@+id/locationName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtLoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="60dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/font_bold"
                            android:letterSpacing="0.03"
                            android:maxLines="1"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:text="location"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize_hint"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/Ldirectionlayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="2dp">

                            <TextView
                                android:id="@+id/txtdirection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:justificationMode="inter_word"
                                android:letterSpacing="0.03"
                                android:lineSpacingExtra="@dimen/padding3"
                                android:text="Directions"
                                android:textColor="@color/title_consu"
                                android:textSize="@dimen/txtsize_title_term_small"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_location_blue" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/locationName"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/img_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/icon_angle_down" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtlocation_amentites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/spinnerbg"
                            android:drawableLeft="@drawable/icon_location_lightgray"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/dark_blue"
                            android:justificationMode="inter_word"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="@dimen/padding3"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="4dp"
                            android:text="Amenities"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/txtsize_12"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtLocKM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="1.5 Km"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_12"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:id="@+id/txtcheckin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:background="@color/bg_opennow"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:drawableLeft="@drawable/appointmenticon_sized"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:drawableTint="@color/colorAccent"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txtsize_title_term_small"
                    android:textStyle="bold"
                    android:visibility="gone" />



                <LinearLayout
                    android:id="@+id/LexpandCheckin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txtwaittime_expand"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/spinnerbg"
                            android:fontFamily="@font/font_bold"
                            android:gravity="center"
                            android:justificationMode="inter_word"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="@dimen/padding3"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/txtsize_10"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_checkin_expand"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/dark_blue"
                            android:fontFamily="@font/font_bold"
                            android:justificationMode="inter_word"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="@dimen/padding3"
                            android:text="Check-In"
                            android:textAllCaps="true"
                            android:textColor="@color/app_background"
                            android:textSize="@dimen/txtsize_10"
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_diffdate_expand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding2"
                        android:layout_marginBottom="@dimen/padding2"
                        android:gravity="center"
                        android:justificationMode="inter_word"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="@dimen/padding3"
                        android:padding="5dp"
                        android:text="@string/diff_date"
                        android:textColor="@color/title_consu"
                        android:textSize="@dimen/txtsize_10"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout

            android:id="@+id/mLayouthide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding2"
            android:paddingBottom="@dimen/padding7"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/mLayoutWorking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/padding7"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtworking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:text="Working Hours"
                    android:textColor="@color/title_grey_light"
                    android:textSize="@dimen/txtsize_hint_11"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtopen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/padding3"
                    android:fontFamily="@font/font_bold"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:text="Open Now"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txtsize_title_term_small"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
