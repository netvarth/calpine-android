                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtdayofweek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:justificationMode="inter_word"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="@dimen/padding3"
                        android:text="Monday - "
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_12"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtwork1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding5"
                        android:gravity="left"
                        android:justificationMode="inter_word"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="@dimen/padding3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtsize_12"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txtworkSeeAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:text="See All"
                    android:textColor="@color/title_consu"
                    android:textSize="@dimen/txtsize_title_term_small"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lServicelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LDepartment_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtdepartment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:text="Service1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtservices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="@dimen/padding3"
                android:layout_marginStart="5dp"
                android:paddingTop="4dp"
                android:text="CheckIn Services"
                android:textColor="@color/dark_blue"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/LService_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtservice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:text="Service1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtservice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:layout_marginStart="5dp"
                    android:text="Service2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:text="See All"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/title_consu"
                    android:textSize="@dimen/txtsize_title_term_small"
                    android:textStyle="bold" />
            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_parking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/txtparkingSeeAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="2dp"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="@dimen/padding3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="See All"
                android:textColor="@color/title_consu"
                android:textSize="@dimen/txtsize_title_term_small"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="@dimen/padding2"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="@dimen/padding3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_PeopleAhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/txtservices"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/text_multicolor_gradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="2dp"
                    android:text="one person waiting in line"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtwaittime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/spinnerbg"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:paddingLeft="@dimen/padding3"
                    android:paddingRight="@dimen/padding3"
                    android:text="Est WaitTime"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_checkin"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/dark_blue"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:paddingLeft="@dimen/padding3"
                    android:paddingRight="@dimen/padding3"
                    android:text="Check-In"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!--  android:textSize="@dimen/txtsize_subtitle" />-->
            </LinearLayout>


            <TextView
                android:id="@+id/txt_diffdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="@dimen/padding3"
                android:text="@string/diff_date"
                android:textColor="@color/title_consu"
                android:textSize="@dimen/txtsize_title_term_small"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtapptservices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:layout_marginStart="5dp"
                android:lineSpacingExtra="@dimen/padding3"
                android:paddingTop="4dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:text="Appointment Services"
                android:textColor="@color/dark_blue"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/appointmentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_appService1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:text="Service1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_appservice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:layout_marginStart="5dp"
                    android:text="Service2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_appSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:text="See All"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/title_consu"
                    android:textSize="@dimen/txtsize_title_term_small"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginTop="@dimen/padding2"
                android:layout_marginRight="@dimen/padding5"
                android:gravity="left"
                android:orientation="vertical"
                android:textColor="@color/title_consu"
                android:textSize="@dimen/txtsize_12"
                android:visibility="gone">

            </LinearLayout>

            <TextView
                android:id="@+id/txtapptSeeAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginTop="1dp"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="@dimen/padding3"
                android:text="See All"
                android:textColor="@color/title_consu"
                android:textSize="@dimen/txtsize_title_term_small"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rlAppServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginRight="@dimen/padding5"
                android:orientation="horizontal"
                android:visibility="gone">

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/appointmentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding5"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtavaildate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/spinnerbg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding3"
                    android:paddingRight="@dimen/padding3"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/txtsize_12"
                    android:visibility="visible" />
                <Button
                    android:id="@+id/btnappointments"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/dark_blue"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding3"
                    android:paddingRight="@dimen/padding3"
                    android:text="Appointment"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtdontservices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="@dimen/padding3"
                android:paddingLeft="5dp"
                android:paddingTop="4dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:text="Donation Services"
                android:textColor="@color/dark_blue"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/donationList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginTop="@dimen/padding2"
                android:layout_marginRight="@dimen/padding5"
                android:gravity="left"
                android:orientation="vertical"
                android:textColor="@color/title_consu"
                android:textSize="@dimen/txtsize_12"
                android:visibility="visible">

            </LinearLayout>

            <TextView
                android:id="@+id/txtdntSeeAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginTop="1dp"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="@dimen/padding3"
                android:text="See All"
                android:textColor="@color/title_consu"
                android:textSize="@dimen/txtsize_title_term_small"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/donationLayouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_donation"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:visibility="gone"
                    android:background="@color/spinnerbg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/donation_sized"
                        app:tint="@color/dark_blue">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donation Services"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/txtsize_12"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Services"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/txtsize_12"
                            android:visibility="gone">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btndonations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@color/dark_blue"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/padding5"
                    android:paddingLeft="@dimen/padding3"
                    android:paddingRight="@dimen/padding3"
                    android:text="Donate"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />
