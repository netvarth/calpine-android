<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding3"
    android:layout_marginRight="@dimen/padding3"
    android:layout_marginTop="@dimen/padding5"
    android:layout_marginBottom="@dimen/padding5"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background_opaque"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_border_roundedbox"
        android:orientation="vertical">
    <TextView
        android:id="@+id/txt_bussProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABC"
        android:textColor="@color/title_grey"/>

    <TextView
        android:id="@+id/txt_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kochi"
        android:layout_marginTop="@dimen/padding2"
        android:textColor="@color/title_grey"/>
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>