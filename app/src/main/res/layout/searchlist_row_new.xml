<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding3"
    android:layout_marginTop="@dimen/padding7"
    android:layout_marginRight="@dimen/padding3"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding7">

        <LinearLayout
            android:id="@+id/mLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mProfile"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginRight="@dimen/padding5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_noimage" />

                <TextView
                    android:id="@+id/mImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:background="@color/light_grey"
                    android:fontFamily="@font/customfont"
                    android:gravity="center"
                    android:padding="@dimen/padding3"
                    android:text="+3"
                    android:textColor="@color/app_background"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RatingBar
                    android:id="@+id/mRatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5"
                    android:progressDrawable="@drawable/rating_display" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr.N.Rama Rao"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:textColor="@color/title_grey"
                    android:textSize="@dimen/txtsize_hint" />

                <TextView
                    android:id="@+id/domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor/Clicnic"
                    android:layout_below="@id/name"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:textColor="@color/title_grey"
                    android:textSize="@dimen/txtsize_hint" />

                <ImageView
                    android:id="@+id/ic_jaldeeverifiedIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/jaldee_adv" />

                <TextView
                    android:id="@+id/txt_specializations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:background="@color/spinnerbg"
                    android:gravity="center"
                    android:layout_below="@id/domain"
                    android:drawableLeft="@drawable/drawableleft_iconsize"
                    android:drawableTint="@color/dark_blue"
                    android:drawablePadding="10dp"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:text="Specializations"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/txtsize_hint_11"
                    android:textStyle="bold"
                    android:visibility="visible"
                    />

            </RelativeLayout>



        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/btnbook_service"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginTop="120dp"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:paddingLeft="@dimen/padding3"
        android:paddingRight="@dimen/padding3"
        android:text="Book Service"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/txtsize_12"
        android:visibility="visible"/>


</androidx.cardview.widget.CardView>

