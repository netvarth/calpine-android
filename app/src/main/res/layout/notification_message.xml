<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:tint="@color/dark_blue"
            android:paddingLeft="@dimen/default_padding"
            android:src="@drawable/icon_message_gray" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:textSize="14sp"
        android:letterSpacing="0.07"
        android:text="Hey you are reading this message because you received this message,Hey you are reading this message because you received this message,Hey you are reading this message because you received this message"
        android:textColor="#000000">

    </TextView>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/dark_blue"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_50dp">

    </TextView>

</LinearLayout>