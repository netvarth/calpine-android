<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jaldeeinc.jaldee.activities.AppointmentActivity">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="#F1B51C"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dimen_10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:backgroundTint="#F1B51C"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/img_back_arrow"
                app:tint="@color/dark_black">

            </ImageView>

        </androidx.cardview.widget.CardView>


        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/tv_serviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding5"
            android:layout_marginEnd="@dimen/dimen_45dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/dark_black"
            android:textSize="@dimen/txtsize_14"
            android:textStyle="bold">

        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:paddingBottom="@dimen/dimen_60dp">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_donation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding15"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_donationName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/txtsize_12"
                            android:textStyle="bold"
                            android:visibility="visible">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_moreInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/padding2"
                            android:layout_marginTop="@dimen/padding5"
                            android:layout_marginEnd="@dimen/dimen_25dp"
                            android:text="Showmore..."
                            android:textAllCaps="true"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/txtsize_10"
                            android:visibility="gone">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    </RelativeLayout>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="3"
                        android:text=""
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/txtsize_12"
                        android:visibility="visible">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    <LinearLayout
                        android:id="@+id/ll_preinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_marginEnd="@dimen/dimen_25dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                            android:id="@+id/tv_preInfoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/txtsize_14">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_preInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:scrollbars="vertical"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/txtsize_12">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_donation"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:background="@drawable/donate_edittext"
                    android:backgroundTint="@color/special_background"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_10dp">

                    <LinearLayout
                        android:id="@+id/ll_entr_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:gravity="center_horizontal"
                        android:visibility="visible">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_entr_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:letterSpacing="0.04"
                            android:text="Enter Amount"
                            android:textColor="@color/dark_blue"
                            android:textSize="@dimen/txtsize_12">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:background="@drawable/donate_edittext"
                        android:paddingLeft="@dimen/dimen_25dp"
                        android:paddingRight="@dimen/dimen_25dp">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:text="â‚¹"
                            android:textColor="@color/dark_black"
                            android:textSize="@dimen/dimen_20dp"
                            android:textStyle="normal">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                        <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:hint="0"
                            android:inputType="numberDecimal"
                            android:paddingTop="@dimen/dimen_0dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:text=""
                            android:textColor="@color/dark_black"
                            android:textColorHint="@color/button_grey"
                            android:textCursorDrawable="@drawable/cursor"
                            android:textSize="@dimen/dimen_40dp"
                            android:textStyle="bold">

                            <requestFocus />
                        </EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_amountHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_amount"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:gravity="center_horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_info_black">

                        </ImageView>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_amountHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:letterSpacing="0.04"
                            android:text=""
                            android:textSize="@dimen/txtsize_12">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>
                    </LinearLayout>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                        android:id="@+id/tv_errorAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_amount"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:text="* Amount is mandatory"
                        android:textColor="@color/red"
                        android:textSize="@dimen/txtsize_12"
                        android:visibility="gone">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_virtualNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/padding5"
                    android:layout_marginBottom="@dimen/padding5"
                    android:visibility="gone">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact for virtual service : "
                        android:textSize="@dimen/txtsize_12">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    <EditText
                        android:id="@+id/et_virtualNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding3"
                        android:text="5555000015"
                        android:textSize="@dimen/txtsize_14">

                    </EditText>

                </LinearLayout>

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_donation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative"
                    android:layout_marginStart="@dimen/padding15"
                    android:text="Donation by"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                <LinearLayout
                    android:id="@+id/ll_consumerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_donation_text"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:background="@drawable/donate_edittext"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingBottom="@dimen/dimen_5dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/user_filled"
                            app:tint="@color/title_grey">

                        </ImageView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:hint="Name">

                            <EditText
                                android:id="@+id/tv_consumerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:cursorVisible="false"
                                android:drawableRight="@drawable/edit_icon_sized"
                                android:drawableTint="@color/gray"
                                android:focusable="false"
                                android:hint=""
                                android:inputType="text"
                                android:paddingRight="5dp"
                                android:text=""
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/dimen_14sp">

                            </EditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                        android:id="@+id/tv_error_donor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/padding5"
                        android:text="* Donor name is mandatory"
                        android:textColor="@color/red"
                        android:textSize="@dimen/txtsize_12"
                        android:visibility="gone">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingBottom="@dimen/dimen_5dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/call_icon"
                            app:tint="@color/title_grey">

                        </ImageView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:hint="Phone">

                            <EditText
                                android:id="@+id/tv_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:cursorVisible="false"
                                android:drawableRight="@drawable/edit_icon_sized"
                                android:drawableTint="@color/gray"
                                android:focusable="false"
                                android:hint=""
                                android:inputType="text"
                                android:paddingRight="@dimen/dimen_5dp"
                                android:text=""
                                android:textColor="@color/dark_black"
                                android:textSize="@dimen/dimen_14sp">

                            </EditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dimen_5dp"
                        android:paddingTop="@dimen/dimen_5dp"
                        android:paddingBottom="@dimen/dimen_5dp">

                        <ImageView
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/emailicon_sized"
                            app:tint="@color/title_grey">

                        </ImageView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:hint="Mail">

                            <EditText
                                android:id="@+id/tv_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:cursorVisible="false"
                                android:drawableRight="@drawable/edit_icon_sized"
                                android:drawableTint="@color/gray"
                                android:focusable="false"
                                android:hint=""
                                android:inputType="text"
                                android:maxLines="2"
                                android:paddingRight="@dimen/dimen_5dp"
                                android:text=""
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/dimen_14sp">

                            </EditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/tv_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_consumerName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:background="@drawable/donate_edittext"
                    android:hint="Add a note"
                    android:inputType="text"
                    android:maxWidth="250dp"
                    android:maxLines="10"
                    android:minWidth="150dp"
                    android:padding="@dimen/dimen_10dp"
                    android:textSize="@dimen/dimen_14sp">

                </EditText>

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_payment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_note"
                    android:layout_marginStart="@dimen/padding15"
                    android:paddingTop="@dimen/dimen_20dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="SELECT PAYMENT METHOD"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_black"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold"
                    android:visibility="gone">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                <LinearLayout
                    android:id="@+id/ll_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_payment_text"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_payTm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_weight="0.5"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Paytm"
                            android:textSize="@dimen/dimen_15dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_razorpay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_alignRight="@+id/cv_payTm"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_weight="0.5"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="CC/DC/NB/UPI"
                            android:textSize="@dimen/dimen_15dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_errorPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_payment"
                    android:layout_centerInParent="true"
                    android:text="* Please select payment method"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txtsize_12"
                    android:visibility="gone">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_submit"
            android:layout_width="0dp"
            android:layout_height="@dimen/padding45"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_weight="0.93"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/dimen_20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Donate"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtsize_14"
                    android:textStyle="bold">

                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>