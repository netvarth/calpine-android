<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/padding7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/new_location"
            app:tint="@color/location_theme">

        </ImageView>

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:textStyle="bold"
            android:id="@+id/txt_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="3dp"
            android:text="Fort Kochi "
            android:textColor="@color/sec_title_grey"
            android:textSize="@dimen/txtsize_hint" />



        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:id="@+id/txtOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/dimen_2dp"
            android:text="Open Now"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txtsize_10"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:paddingLeft="@dimen/padding7"
        android:paddingRight="@dimen/padding7"
        android:paddingBottom="@dimen/padding7"
        android:id="@+id/recycleview_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
        android:padding="@dimen/padding7"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:id="@+id/qmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding2"
        android:layout_marginBottom="@dimen/padding2"
        android:gravity="left"
        android:text="Message"
        android:textColor="@color/title_grey"
        android:textSize="@dimen/txtsize_12"
        android:visibility="gone"/>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:padding="@dimen/padding7"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:id="@+id/txt_peopleahead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding2"
        android:layout_marginBottom="@dimen/padding2"
        android:gravity="left"
        android:text=""
        android:textColor="@color/title_grey"
        android:textSize="@dimen/txtsize_12"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:id="@+id/txt_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/spinnerbg"
            android:gravity="center"
            android:paddingLeft="@dimen/padding3"
            android:paddingRight="@dimen/padding3"
            android:text="Est WaitTime"
            android:textColor="@color/location_theme"
            android:textSize="@dimen/txtsize_12"
            android:visibility="gone" />

        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/btn_checkin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/location_theme"
            android:gravity="center"
            android:paddingLeft="@dimen/padding3"
            android:paddingRight="@dimen/padding3"
            android:text="Check-In"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_12"
            android:visibility="gone" />

        <!--  android:textSize="@dimen/txtsize_subtitle" />-->
    </LinearLayout>


    <TextView
        android:padding="@dimen/padding5"
        android:layout_marginLeft="@dimen/dimen_2dp"
        android:layout_marginRight="@dimen/dimen_2dp"
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding2"
        android:gravity="center"
        android:text="@string/diff_date"
        android:textColor="@color/title_consu"
        android:textSize="@dimen/txtsize_12"
        android:visibility="gone"/>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/appoinmentLayouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_padding"
        android:orientation="horizontal">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:id="@+id/txtavaildate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/spinnerbg"
            android:justificationMode="inter_word"
            android:letterSpacing="0.03"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/padding3"
            android:paddingLeft="@dimen/padding3"
            android:paddingRight="@dimen/padding3"
            android:text=""
            android:textColor="@color/location_theme"
            android:textSize="@dimen/txtsize_12"
            android:textStyle="normal"
            android:visibility="visible" />

        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/btnappointments"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/location_theme"
            android:gravity="center"
            android:paddingLeft="@dimen/padding3"
            android:paddingRight="@dimen/padding3"
            android:text="Appointment"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_12"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/donationLayouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_padding"
        android:orientation="horizontal">



        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/btndonations"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/location_theme"
            android:gravity="center"
            android:paddingLeft="@dimen/padding3"
            android:paddingRight="@dimen/padding3"
            android:text="Donate"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_12" />

        <!--  android:textSize="@dimen/txtsize_subtitle" />-->
    </LinearLayout>



    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/padding5"
        android:background="@color/view_border"
        android:visibility="gone" />

</LinearLayout>