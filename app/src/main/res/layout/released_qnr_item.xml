<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_qnr"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/padding5"
    app:cardCornerRadius="@dimen/padding5"
    app:cardElevation="@dimen/padding5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding5"
        android:layout_marginTop="@dimen/padding5"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ll_layout"
            android:layout_weight="1"
            android:gravity="center">

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_qnr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="sewerwerwerewrawerwersdfasfsfsdfsdfsdfsdfsdfdf"
                android:textColor="@color/location_theme"
                android:textAlignment="textStart"
                android:textSize="@dimen/txtsize_12">

            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="3"
            android:gravity="center">

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_qnr_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="sdfasdfa"
                android:textColor="@color/location_theme"
                android:textSize="@dimen/txtsize_12"
                android:textAlignment="textStart"
                >

            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>