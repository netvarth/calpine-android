<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background_white_round"
        android:padding="@dimen/default_padding"
        android:orientation="horizontal">

        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:id="@+id/txt_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/location_theme"
            android:textSize="@dimen/txtsize_hint" >
        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>
        <ImageView
            android:id="@+id/imgarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_down_light"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/favlisiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="@dimen/padding5"
        android:background="@drawable/input_border_bottom_white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding5">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:textColor="@color/black"
                android:letterSpacing="0.03"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="@dimen/padding3"
                android:id="@+id/txtremovefav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:drawableTop="@drawable/icon_favourite_fill"
                android:gravity="center"
                android:text="Favourite"
                android:textSize="@dimen/txtsize_12" />

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:textColor="@color/black"
                android:letterSpacing="0.03"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="@dimen/padding3"
                android:id="@+id/txtmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:drawableTop="@drawable/icon_message_gray"
                android:gravity="center"
                android:text="Message"
                android:textSize="@dimen/txtsize_12" />

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:textColor="@color/black"
                android:letterSpacing="0.03"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="@dimen/padding3"
                android:id="@+id/txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:drawableTop="@drawable/showpassword"
                android:gravity="center"
                android:text="View"
                android:textSize="@dimen/txtsize_12" />

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:textColor="@color/black"
                android:letterSpacing="0.03"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="@dimen/padding3"
                android:id="@+id/txtprivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:drawableTop="@drawable/icon_privacy"
                android:gravity="center"
                android:text="Privacy"
                android:textSize="@dimen/txtsize_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_border" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylce_favloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
           ></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>