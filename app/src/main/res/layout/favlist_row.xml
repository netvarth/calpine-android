<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background_opaque_round"
        android:drawableRight="@drawable/icon_down_light"
        android:textColor="@color/title_grey"
        android:padding="@dimen/padding5"
        android:textSize="@dimen/txtsize_subtitle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylce_favloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:visibility="gone"
      ></android.support.v7.widget.RecyclerView>



</LinearLayout>