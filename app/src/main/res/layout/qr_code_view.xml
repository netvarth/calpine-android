<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_qr"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_background_white_round"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:padding="@dimen/padding2">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/padding5"
            android:src="@drawable/close" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/qr_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27.0dip"
            android:background="@drawable/input_background_white_round"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="36.0dip">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:id="@+id/tv_providerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40.0dip"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18.0sp" />

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_provider_specialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/opaque_black"
                android:textSize="12.0sp" />

            <FrameLayout
                android:id="@+id/qr_code_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background_white_round">

                <ImageView
                    android:id="@+id/iv_Qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <!--<TextView
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_qr_walogo" />-->
            </FrameLayout>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="54.0dip"
            android:layout_height="54.0dip"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <View
        android:id="@+id/qr_shadow"
        android:layout_width="280.0dip"
        android:layout_height="34.0dip"
        android:layout_gravity="center_horizontal"
        android:alpha="0.7"
        android:background="@drawable/top_shadow"
        android:visibility="gone" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="312.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16.0dip"
        android:gravity="center"
        android:lineSpacingExtra="2.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:textSize="14.0sp"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/smb_footer_stub"
        android:layout_width="312.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />
</LinearLayout>