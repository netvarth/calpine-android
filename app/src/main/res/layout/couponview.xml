<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/ll_coupon"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_background"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_background">

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding5"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginRight="@dimen/padding5"
                    android:layout_marginBottom="@dimen/default_padding"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/default_padding"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <RelativeLayout
                            android:id="@+id/rl_cName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp">


                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/couponName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coupon Name"
                                android:textColor="@color/dark_black"
                                android:textSize="18dp" />


                            <LinearLayout
                                android:id="@+id/ll_signUpCoupon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/left_curved"
                                android:backgroundTint="@color/action_color"
                                android:visibility="visible">

                                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:paddingTop="4dp"
                                    android:paddingEnd="5dp"
                                    android:paddingBottom="4dp"
                                    android:text="Signup Coupon"
                                    android:textColor="@color/dark_blue">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                            </LinearLayout>


                        </RelativeLayout>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/couponDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rl_cName"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="Description"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/txtsize_hint" />


                        <LinearLayout
                            android:id="@+id/couponCodeLinear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/couponDesc"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <TextView
                                android:id="@+id/codetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coupon Code : "
                                android:textSize="@dimen/txtsize_hint" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Code"
                                android:textColor="@color/green"
                                android:textIsSelectable="true"
                                android:textSize="@dimen/txtsize_hint"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/termlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/couponTerms"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <com.jaldeeinc.jaldee.custom.CustomTextViewLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T &amp; C : "
                                android:textSize="@dimen/txtsize_hint"
                                android:visibility="visible" />

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/couponTerms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terms"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/txtsize_hint" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/discountLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/termlayout"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">


                            <com.jaldeeinc.jaldee.custom.CustomTextViewLight
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Discount : "
                                android:textSize="@dimen/txtsize_hint"
                                android:visibility="visible" />

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/couponDisc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/txtsize_hint" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <LinearLayout
                                android:id="@+id/minBill"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="5dp"
                                android:orientation="horizontal">


                                <com.jaldeeinc.jaldee.custom.CustomTextViewLight
                                    android:id="@+id/couponDiscText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Min Bill : "
                                    android:textSize="@dimen/txtsize_hint"
                                    android:visibility="visible" />

                                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                    android:id="@+id/tv_minBill"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/title_color"
                                    android:textSize="@dimen/txtsize_hint" />


                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="5dp"
                                app:cardBackgroundColor="@color/special_background"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/couponCode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_toStartOf="@id/iv_copy"
                                        android:text="Provider coupon"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="18dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewBold>


                                    <ImageView
                                        android:id="@+id/iv_copy"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="10dp"
                                        android:padding="2dp"
                                        android:src="@drawable/copy"
                                        app:tint="@color/dark_blue">

                                    </ImageView>

                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/validlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/couponTerms"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">


                            <com.jaldeeinc.jaldee.custom.CustomTextViewLight
                                android:id="@+id/validitytext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valid through : "
                                android:textSize="@dimen/txtsize_hint"
                                android:visibility="visible" />

                            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                android:id="@+id/validityvaluetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Validity"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/txtsize_hint" />


                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>