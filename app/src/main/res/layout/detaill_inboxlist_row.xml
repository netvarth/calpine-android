<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inbox_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_sent" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/default_padding"
                android:text="Date"
                android:textColor="@color/title_grey_light"
                android:textSize="@dimen/txtsize_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding3"
            android:text="message"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_12" />



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/imageScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:background="@drawable/input_border_cyan_bg"
                android:gravity="left"
                android:orientation="horizontal"
                android:padding="@dimen/padding5">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="horizontal" />

            </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding7"
            android:orientation="vertical">


            <!--        <ImageView-->
            <!--            android:layout_width="@dimen/dimen_scrlimg_dp"-->
            <!--            android:layout_height="@dimen/dimen_scrlimg_dp"-->
            <!--            android:layout_gravity="center"-->
            <!--            android:layout_marginTop="@dimen/dimen_10dp"-->
            <!--            android:scaleType="fitXY"-->
            <!--            android:src="@mipmap/ic_launcher"-->
            <!--            android:adjustViewBounds="true"-->
            <!--            android:id="@+id/file_attach_detail"/>-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding5"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_seemore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="See More"
                android:textColor="@color/title_consu"
                android:textSize="@dimen/txtsize_title_term_small" />

            <!--            <TextView-->
            <!--                android:id="@+id/txtattach"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:layout_weight="0.4"-->
            <!--                android:background="@drawable/input_border_rectblue_bg"-->
            <!--                android:gravity="center"-->
            <!--                android:padding="@dimen/padding2"-->
            <!--                android:text="Attach Files"-->
            <!--                android:textColor="@color/title_consu"-->
            <!--                android:textSize="@dimen/txtsize_12" />-->

            <TextView
                android:id="@+id/txtreply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.2"
                android:background="@drawable/input_border_rectblue_bg"
                android:gravity="center"
                android:padding="@dimen/padding2"
                android:text="Reply"
                android:textColor="@color/title_consu"
                android:textSize="@dimen/txtsize_12" />
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding5"
        android:background="@color/view_border" />


</LinearLayout>