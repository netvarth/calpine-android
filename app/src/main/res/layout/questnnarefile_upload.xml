<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_5dp"
        app:cardElevation="@dimen/dimen_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_10dp">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:id="@+id/tv_questionName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Upload your id card detailsss"
                    android:textColor="@color/title_color"
                    android:layout_weight="0.9"
                    android:textSize="@dimen/dimen_15dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_multipleFileManditory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:text="*"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_15dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

            </LinearLayout>

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textColor="@color/tab_disable"
                android:textSize="@dimen/dimen_12dp">

            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

            <com.jaldeeinc.jaldee.custom.MultiSpinnerSearch
                android:id="@+id/mfilesSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:background="@drawable/new_spinner_bg">

            </com.jaldeeinc.jaldee.custom.MultiSpinnerSearch>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/dimen_8dp">

            </androidx.recyclerview.widget.RecyclerView>

            <com.jaldeeinc.jaldee.custom.CustomItalicTextViewNormal
                android:id="@+id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_12dp"
                android:textColor="@color/red"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="">

            </com.jaldeeinc.jaldee.custom.CustomItalicTextViewNormal>

            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                android:id="@+id/tv_supportedTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>