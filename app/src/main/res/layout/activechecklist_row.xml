<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding5"
    android:layout_marginLeft="@dimen/padding5"
    android:layout_marginRight="@dimen/padding5"
    android:layout_marginTop="@dimen/padding7"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_businessname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sony Latest"
                        android:textColor="@color/title_consu"
                        android:textSize="@dimen/txtsize_hint" />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_location_lightgray"
                        android:drawablePadding="3dp"
                        android:layout_marginTop="@dimen/padding7"
                        android:textColor="@color/sec_title_grey"
                        android:textSize="@dimen/txtsize_title_term_small"
                        android:visibility="gone" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/padding2"
                android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/img_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_favourited" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding7"
            android:background="@color/spinnerbg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding5">

            <TextView
                android:id="@+id/txt_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="left"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_esttime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="right|center"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding7"
        android:background="@color/app_background"
        android:orientation="vertical"
        android:padding="@dimen/padding5">

        <TextView
            android:id="@+id/time_queue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="@color/title_grey"
            android:textSize="@dimen/txtsize_12" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding7"
            android:background="@color/app_background"
            android:orientation="horizontal"
            android:padding="@dimen/padding5">

            <!--<TextView
                android:id="@+id/txt_waitsatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/cyan"
                android:textSize="@dimen/txtsize_12" />-->


            <TextView
                android:id="@+id/txt_token"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/txt_personahead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />


        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding7"
            android:background="@color/app_background"
            android:orientation="horizontal"
            android:padding="@dimen/padding5"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_prepaid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="#4DE2FF"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/txt_amtdue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_12" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/padding5"
            android:background="@color/view_border" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding5"
            android:background="@color/app_background"
            android:gravity="left"
            android:paddingBottom="@dimen/padding3"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/icon_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_message_gray"
                android:gravity="center"
                android:text="Enquiry"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/icon_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_cancel_line"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="@dimen/txtsize_12" />

            <TextView
                android:id="@+id/icon_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_receipt"
                android:gravity="center"
                android:text="Receipt"
                android:textSize="@dimen/txtsize_12" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>