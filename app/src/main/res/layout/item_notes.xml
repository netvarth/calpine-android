<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_curved"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/close">

        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/padding5">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:id="@+id/tv_errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:text="*Please add notes"
            android:textColor="@color/red"
            android:textSize="15dp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
            android:id="@+id/edt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding5"
            android:background="@color/spinnerbg"
            android:gravity="top"
            android:hint="Enter your notes"
            android:justificationMode="inter_word"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="@dimen/padding3"
            android:minHeight="150dp"
            android:padding="@dimen/padding5"
            android:textColor="@color/black"
            android:textColorHint="@color/title_color"
            android:textSize="14dp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center">



        <androidx.cardview.widget.CardView
            android:id="@+id/cv_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/spinnerbg"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancel"
                android:textAllCaps="true"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/txtsize_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_yes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/dark_blue"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txtsize_hint" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>