<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jaldeeinc.jaldee.Fragment.MyBookings">

    <com.jaldeeinc.jaldee.custom.CustomTextViewRegularItalic
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding3"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/title_color">

    </com.jaldeeinc.jaldee.custom.CustomTextViewRegularItalic>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_todays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding3">

    </androidx.recyclerview.widget.RecyclerView>

    <com.jaldeeinc.jaldee.custom.CustomTextViewRegularItalic
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding3"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/title_color">

    </com.jaldeeinc.jaldee.custom.CustomTextViewRegularItalic>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_upcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding3">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>