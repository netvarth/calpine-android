<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_5dp"
        app:cardElevation="@dimen/dimen_0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_5dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_5dp"
            android:paddingBottom="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_6dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_questionName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:fontFamily="@font/font_semibold"
                            android:text="sdawdf"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/dimen_10dp">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_manditory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen_15dp"
                            android:visibility="gone">

                        </TextView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_item_Hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_40dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/font_light"
                        android:maxLines="1"
                        android:text="sdfsdf"
                        android:textColor="@color/grey13"
                        android:textSize="@dimen/txtsize_10" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_dataTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_6dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:visibility="visible">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_add"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/padding45"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_weight="3"
                        app:cardBackgroundColor="@color/blue3"
                        app:cardCornerRadius="@dimen/dimen_20dp">

                        <LinearLayout
                            android:id="@+id/ll_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.9"
                            android:gravity="center">
                            <!--    <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_semibold"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_15dp">

                            </TextView>-->
                            <ImageView
                                android:layout_width="@dimen/dimen_12dp"
                                android:layout_height="@dimen/dimen_12dp"
                                android:src="@drawable/add"
                                app:tint="@color/white">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_8dp"
                                android:fontFamily="@font/font_semibold"
                                android:text="Add"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_15dp">

                            </TextView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_12dp"
                android:visibility="gone">

            </TextView>

            <!--<LinearLayout
                android:id="@+id/ll_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginEnd="@dimen/dimen_8dp"
                android:orientation="horizontal"
                android:background="@color/gray">

            </LinearLayout>-->


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>