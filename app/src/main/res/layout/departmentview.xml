<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/hometopbar"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar" />


    </LinearLayout>
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="ProviderName"-->
<!--        android:id="@+id/providerName"-->
<!--        android:layout_gravity="center"-->
<!--        android:textSize="@dimen/dimen_16sp"-->
<!--        android:textAlignment="center"-->
<!--        android:padding="@dimen/dimen_10dp"-->
<!--        android:background="@color/add_amount_grey"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">
<!--        <TextView-->
<!--            android:id="@+id/txtdescription"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="@dimen/default_padding"-->
<!--            android:fontFamily="@font/customfont"-->
<!--            android:text="Description"-->
<!--            android:textColor="@color/title_grey"-->
<!--            android:textSize="@dimen/txtsize_subtitle"-->
<!--            android:textStyle="bold" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_depName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department Name"
                    android:textSize="8dp"
                    android:textColor="@color/title_grey_light"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtdepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LDeptCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code : "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtdeptCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/txtsize_14">

                </TextView>

            </LinearLayout>
        </LinearLayout>
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="2dp"-->
<!--            android:background="@color/opaque_title_grey"/>-->

        <LinearLayout
            android:id="@+id/ll_DeptDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_docHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count : "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_doctors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/dark_blue"
                />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/txt_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Services >"
        android:textSize="@dimen/txtsize_hint"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:background="@color/light_grey"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/Lservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding5"
        android:layout_marginTop="@dimen/default_padding"
        android:layout_marginRight="@dimen/padding5"
        android:gravity="left"
        android:orientation="horizontal"
        android:textColor="@color/title_consu"
        android:textSize="@dimen/txtsize_12"
        android:visibility="gone">


</LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/department_searchresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/service_searchresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0EEEE">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
