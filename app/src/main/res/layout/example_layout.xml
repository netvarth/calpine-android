<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding3"
    android:layout_marginTop="@dimen/dimen_2dp"
    android:layout_marginRight="@dimen/padding3"
    android:layout_marginBottom="@dimen/padding5"
    card_view:cardCornerRadius="8dp">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginRight="@dimen/padding5"
                android:layout_weight="0.27"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon_noimage" />

                <ImageView
                    android:id="@+id/iprofile1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/padding7"
                    android:layout_toRightOf="@+id/profile"
                    android:src="@drawable/icon_noimage"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iprofile2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/padding7"
                    android:layout_toRightOf="@+id/iprofile1"
                    android:alpha="0.8"
                    android:foreground="@drawable/roundedrect_cicle"
                    android:src="@drawable/icon_noimage"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:background="@color/light_grey"
                    android:fontFamily="@font/font_bold"
                    android:gravity="center"
                    android:padding="@dimen/padding3"
                    android:textColor="@color/app_background"
                    android:textSize="@dimen/txtsize_12"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RatingBar
                    android:id="@+id/mRatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5"
                    android:progressDrawable="@drawable/rating_display" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginTop="@dimen/padding5"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Name"
                                android:textColor="@color/title_grey"
                                android:textSize="@dimen/txtsize_hint" />

                            <ImageView
                                android:id="@+id/txtjdn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:src="@drawable/jdn_icon"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/count_doctors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding3"
                            android:gravity="left"
                            android:text=""
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/branch_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding3"
                            android:gravity="left"
                            android:text="Names"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize_10"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/domain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding5"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtsize_12" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-5dp"
                            android:layout_marginTop="@dimen/padding5"
                            android:gravity="right|center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_location_blue" />

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-2dp"
                                android:gravity="left"
                                android:text="Kakkanad"
                                android:textColor="@color/title_consu"
                                android:textSize="@dimen/txtsize_12" />


                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="1dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/txtsize_12" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="top|center"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/padding3">

                        <ImageView
                            android:id="@+id/ic_jaldeeverifiedIcon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/jaldee_adv" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/Lspec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginRight="@dimen/padding5"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_specializations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/spinnerbg"
                    android:drawableLeft="@drawable/drawableleft_iconsize"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/dark_blue"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="@dimen/padding3"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:text="Specializations"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/txtsize_hint_11"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60dp"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dimen_40dp"
                android:background="@drawable/input_border_cyan_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding5"
                    android:layout_marginStart="@dimen/dimen_15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_coupon_jaldee">

                    </ImageView>

                    <TextView
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="wrap_content"
                        android:text="  Sign Up Coupouns"
                        android:lines="2"
                        android:minLines="2"
                        android:singleLine="false"
                        android:textSize="@dimen/txtsize_10">


                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding5"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icc_coupon">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coupouns"
                        android:lines="2"
                        android:minLines="2"
                        android:singleLine="false"
                        android:textSize="@dimen/dimen_12dp">


                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding5"
                    android:paddingBottom="@dimen/padding3"
                    android:layout_margin="3dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_message_gray">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enquiry"
                        android:textSize="@dimen/dimen_12dp">


                    </TextView>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnbook_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/padding3"
            android:paddingRight="@dimen/padding3"
            android:text="Book Service"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_12"
            android:visibility="visible"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>
