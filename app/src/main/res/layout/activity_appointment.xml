<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jaldeeinc.jaldee.activities.AppointmentActivity">


    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cv_bottom"
        android:layout_below="@id/ll_toolbar">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:paddingBottom="25dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white1"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/iv_teleService"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/service_avatar"
                                android:visibility="visible">

                            </ImageView>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_serviceName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="@font/font_medium"
                            android:text="service"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_medium"
                            android:textColor="@color/title_color"
                            android:textSize="10dp"
                            android:visibility="gone">

                        </TextView>

                        <LinearLayout
                            android:id="@+id/ll_appoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_selectedDateHint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/font_regular"
                                android:text="Next Available Time: "
                                android:textColor="@color/grey18"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/font_regular"
                                android:letterSpacing="0.1"
                                android:text=""
                                android:textColor="@color/black6"
                                android:textSize="10dp" />


                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/font_regular"
                                android:letterSpacing="0.1"
                                android:nestedScrollingEnabled="true"
                                android:text=""
                                android:textColor="@color/black6"
                                android:textSize="10dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_checkIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <TextView
                                android:id="@+id/tv_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/font_regular"
                                android:text=""
                                android:textColor="@color/grey18"
                                android:textSize="10dp" />


                            <TextView
                                android:id="@+id/tv_checkInDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/font_regular"
                                android:letterSpacing="0.1"
                                android:text=""
                                android:textColor="@color/black6"
                                android:textSize="10dp" />


                            <TextView
                                android:id="@+id/tv_peopleInLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:fontFamily="@font/font_regular"
                                android:letterSpacing="0.1"
                                android:text=""
                                android:textColor="@color/black6"
                                android:textSize="10dp" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvSelectedCalendarDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/font_medium"
                        android:text="SELECT A DATE"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <DatePicker
                            android:id="@+id/calendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:theme="@style/AppCompatAlertDialogStyle.Custom"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_slots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/font_medium"
                    android:text="Booking For"
                    android:textColor="@color/grey21"
                    android:textSize="14dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/grey20"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/icon_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="51dp"
                                    android:layout_height="51dp"
                                    android:contentDescription="TODO"
                                    android:src="@drawable/circle_borderblue_whitefilled" />

                                <TextView
                                    android:id="@+id/icon_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/blue5"
                                    android:textSize="26dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="8"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="16dp">

                                <LinearLayout
                                    android:id="@+id/ll_editDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true">

                                    <TextView
                                        android:id="@+id/tv_edit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/font_medium"
                                        android:text="Change"
                                        android:textAllCaps="false"
                                        android:textColor="@color/blue5"
                                        android:textSize="@dimen/txtsize_10">

                                    </TextView>

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_consumerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:textColor="@color/black8"
                                    android:textSize="16dp" />


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycle_family"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/padding7"
                                    android:layout_marginRight="@dimen/default_padding"
                                    android:nestedScrollingEnabled="true"
                                    android:visibility="gone">

                                </androidx.recyclerview.widget.RecyclerView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/padding5"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:alpha="0.6"
                                        android:fontFamily="@font/font_regular"
                                        android:textColor="@color/grey22"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:id="@+id/tv_email"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="24dp"
                                        android:alpha="0.6"
                                        android:fontFamily="@font/font_regular"
                                        android:textColor="@color/grey22"
                                        android:textSize="12dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_virtualNumber"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/padding40"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/padding5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tv_vsHint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_regular"
                                    android:text=""
                                    android:textSize="@dimen/txtsize_12">

                                </TextView>

                                <com.hbb20.CountryCodePicker
                                    android:id="@+id/virtual_NmbrCCPicker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    app:ccp_autoDetectCountry="true"
                                    app:ccp_showArrow="false"
                                    app:ccp_showFlag="false"
                                    app:ccp_showNameCode="false"
                                    app:ccp_textSize="@dimen/txtsize_14" />

                                <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                                    android:id="@+id/et_virtualNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"
                                    android:gravity="bottom"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:text="567893"
                                    android:textSize="@dimen/txtsize_14">

                                </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/ll_onetime_qnr_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_oneTimeQnr_hline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/font_medium"
                        android:text="One time info"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <RelativeLayout
                        android:id="@+id/rl_onetime_qnr"
                        android:layout_width="match_parent"
                        android:layout_height="1000dp"
                        android:orientation="vertical">

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_preinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/padding15"
                android:orientation="vertical"
                android:visibility="gone">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:id="@+id/tv_preInfoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/txtsize_14"
                    android:textStyle="bold">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:id="@+id/tv_preInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding5"
                    android:scrollbars="vertical"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/txtsize_12">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_coupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/discount"
                            app:tint="@color/location_theme">

                        </ImageView>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:text="Coupons"
                            android:textColor="@color/location_theme"
                            android:textSize="14dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_chint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/txtsize_14"
                            android:layout_height="@dimen/txtsize_14"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_notification_bell"
                            app:tint="@color/button_background" />

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:text=" Coupon will be applied on the final bill"
                            android:textColor="@color/button_background"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_padding"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="@dimen/default_padding"
                        android:background="@drawable/edittext"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:hint="Coupon Code"
                            android:inputType="text"
                            android:paddingStart="@dimen/padding5"
                            android:paddingTop="@dimen/padding5"
                            android:paddingBottom="@dimen/padding5"
                            android:textAllCaps="true"
                            android:textColor="@color/title_grey"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/font_semibold"
                            android:text="Apply"
                            android:textColor="@color/location_theme"
                            android:textSize="@dimen/txtsize_subtitle" />


                    </RelativeLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/cv_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@id/cv_submit"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_addNote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding5"
            android:layout_weight="1"
            app:cardBackgroundColor="#F2F2F2"
            app:cardElevation="@dimen/padding2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="@dimen/padding20"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_document"
                    app:tint="@color/location_theme" />

                <TextView
                    android:id="@+id/tv_addNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding3"
                    android:fontFamily="@font/font_regular"
                    android:text="Add Note"
                    android:textAllCaps="true"
                    android:textColor="@color/location_theme"
                    android:textSize="@dimen/txtsize_12">

                </TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_attachFile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding5"
            android:layout_weight="1"
            app:cardBackgroundColor="#F2F2F2"
            app:cardElevation="@dimen/padding2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="@dimen/padding20"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_attachments"
                    app:tint="@color/location_theme" />

                <TextView
                    android:id="@+id/attach_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding3"
                    android:fontFamily="@font/font_regular"
                    android:text="Attach File"
                    android:textAllCaps="true"
                    android:textColor="@color/location_theme"
                    android:textSize="@dimen/txtsize_12">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/padding5"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/blue5"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_buttonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font_medium"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>