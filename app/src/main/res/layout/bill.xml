<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_gradient_home"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/hometopbar"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:overScrollMode="never">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_padding"
                android:layout_marginLeft="@dimen/padding5"
                android:layout_marginRight="@dimen/padding5"
                android:layout_marginTop="@dimen/default_padding"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/default_padding">

                    <TextView
                        android:id="@+id/provider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:gravity="center"
                        android:textColor="@color/title_grey"
                        android:textSize="@dimen/txtsize_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:text="@string/customer"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/datetime"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtcustomer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="left"

                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />

                        <TextView
                            android:id="@+id/txtdate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"

                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/billLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:text="@string/bill"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />

                        <TextView
                            android:id="@+id/gstLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/GSTIN"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtbill"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:gravity="left"

                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />

                        <TextView
                            android:id="@+id/txtgstn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"

                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/padding7"
                        android:background="@color/view_border" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding7"
                        android:nestedScrollingEnabled="false">
                    </android.support.v7.widget.RecyclerView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding7"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="left"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                        <TextView
                            android:id="@+id/tv_gross"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="Gross Amount"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />

                        <TextView
                            android:id="@+id/grosstotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/jcLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding7"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="left"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/jaldeeCouponLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="Jaldee Coupon "
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>



                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/coupon_added"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false">
                    </android.support.v7.widget.RecyclerView>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_discount_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:nestedScrollingEnabled="false">
                    </android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/taxlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="left"
                            android:visibility="invisible"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                        <TextView
                            android:id="@+id/tv_tax"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:text="Tax(CGST: %, SGST: %)"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />

                        <TextView
                            android:id="@+id/txtaxval"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/amountlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="left"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />

                        <TextView
                            android:id="@+id/txtnetRate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Net Total"
                            android:gravity="right"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />

                        <TextView
                            android:id="@+id/txtamt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"

                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>

                   <!-- <LinearLayout
                        android:id="@+id/discountlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtdiscount_head"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="right"
                            android:text="@string/discount"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />

                        <TextView
                            android:id="@+id/txtdiscount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"

                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coupanlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtcoupan_head"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="right"
                            android:text="Coupon"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />

                        <TextView
                            android:id="@+id/txtcoupan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="right"

                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>-->

                    <LinearLayout
                        android:id="@+id/paidlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding3"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="left"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/amt_pay"
                            android:gravity="right"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_12" />

                        <TextView
                            android:id="@+id/amtpaid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"

                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding5"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="left"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />
                        <TextView

                            android:id="@+id/txttotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Amount Due"
                            android:gravity="right"
                            android:textColor="@color/title_grey"
                            android:textSize="@dimen/txtsize_hint" />

                        <TextView
                            android:id="@+id/totalamt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="@dimen/default_padding"
                        android:background="@drawable/cutom_edittext"
                        android:padding="7dp"
                        android:id="@+id/couponCheckin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <EditText
                            android:fontFamily="@font/customfont"
                            android:id="@+id/bill_coupon_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/editbox"
                            android:hint="Enter coupon code"
                            android:textSize="@dimen/txtsize_hint"
                            />

                        <Button
                            android:fontFamily="@font/customfont"
                            android:textSize="@dimen/txtsize_subtitle"
                            android:background="@drawable/button"
                            android:id="@+id/bill_applybtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:text="ADD"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/padding7"
                        android:layout_marginTop="@dimen/default_padding"
                        android:orientation="horizontal">



                        <Button
                            android:id="@+id/btn_pay"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:background="@drawable/roundedrect_blue"
                            android:text="Make Payment"
                            android:textAllCaps="false"
                            android:textColor="@color/app_background"
                            android:textSize="@dimen/txtsize_hint" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>