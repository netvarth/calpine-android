<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text=""
        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ReadTC"
        android:maxLines="@integer/int_1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />


    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/ReadTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text=""
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/deletecoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_delete" />



</RelativeLayout>