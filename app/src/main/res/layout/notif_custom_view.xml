<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding3"
        android:layout_marginLeft="@dimen/padding5"
        android:layout_marginRight="@dimen/padding5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:src="@mipmap/ynw_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding3"
            android:textSize="@dimen/txtsize_title_small"
            android:text="@string/app_name"
            android:textColor="#EFB41C" />
    </LinearLayout>

    <TextView
        android:id="@+id/txttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding5"
        android:layout_marginTop="@dimen/padding2"
        android:textColor="@color/black"
        android:textSize="@dimen/txtsize_title_small"
        android:paddingRight="@dimen/padding5"/>

    <TextView
        android:id="@+id/txtnotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding5"
        android:layout_marginTop="@dimen/padding2"
        android:textSize="@dimen/txtsize_title_small"
        android:textColor="@color/title_grey"
        android:paddingRight="@dimen/padding5"
        android:paddingBottom="@dimen/padding3"/>
</LinearLayout>