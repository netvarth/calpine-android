<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="@dimen/padding20"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding5"
        android:background="@color/app_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtprepayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Amount to Pay "
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_subtitle" />

            <TextView
                android:id="@+id/txtamount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text=" Rs.100"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txtsize_subtitle" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:gravity="center"
            android:text=" Pay By "
            android:textColor="@color/sec_title_grey"
            android:textSize="@dimen/txtsize_hint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding5"
        android:background="@color/app_background"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_paytm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/roundedrect_blue"
            android:text="PayTM"
            android:textAllCaps="false"
            android:textColor="@color/app_background"
            android:textSize="@dimen/txtsize_hint" />

        <Button
            android:id="@+id/btn_payu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_weight="0.5"
            android:background="@drawable/roundedrect_blue"
            android:text="PayUMoney"
            android:textAllCaps="false"
            android:textColor="@color/app_background"
            android:textSize="@dimen/txtsize_hint" />
    </LinearLayout>
</LinearLayout>
