<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:padding="@dimen/padding20"
    app:ignore="NamespaceTypo">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/close"
        android:visibility="gone">

    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding5"
        android:background="@color/app_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtprepayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Amount to Pay "
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_subtitle" />

            <TextView
                android:id="@+id/txtamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txtsize_subtitle" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:gravity="center"
            android:text=" Pay By "
            android:textColor="@color/sec_title_grey"
            android:textSize="@dimen/txtsize_hint" />

    </LinearLayout>
    <!--<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_payment_modes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:visibility="visible">

    </androidx.recyclerview.widget.RecyclerView>-->
    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gv_payment_modes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding5"
        android:background="@color/app_background"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_pay"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedrect_blue"
            android:text="Make Payment"
            android:textAllCaps="false"
            android:textColor="@color/app_background"
            android:textSize="@dimen/txtsize_hint" />
    </LinearLayout>

    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
        android:id="@+id/tv_international_payment_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="International Payment ? Click here"
        android:textColor="@color/blue"
        android:textSize="@dimen/txtsize_12"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_cancellation_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="5">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_cancellation_policy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tab_disable">

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_cancellation_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Cancellation Policy"
                    android:textColor="@color/tab_unchecked"
                    android:textSize="@dimen/txtsize_10" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
