<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="@dimen/padding20"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:visibility="gone"
        android:src="@drawable/close">

    </ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding5"
        android:background="@color/app_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtprepayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Amount to Pay "
                android:textColor="@color/title_grey"
                android:textSize="@dimen/txtsize_subtitle" />

            <TextView
                android:id="@+id/txtamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txtsize_subtitle" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:gravity="center"
            android:text=" Pay By "
            android:textColor="@color/sec_title_grey"
            android:textSize="@dimen/txtsize_hint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding5"
        android:background="@color/app_background"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_paytm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/roundedrect_blue"
            android:text="Paytm"
            android:textAllCaps="false"
            android:textColor="@color/app_background"
            android:textSize="@dimen/txtsize_hint" />

        <Button
            android:id="@+id/btn_payu"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:background="@drawable/roundedrect_grey"
            android:text="@string/cc_dc"
            android:textAllCaps="false"
            android:textColor="@color/app_background"
            android:textSize="@dimen/txtsize_hint" />
    </LinearLayout>
    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
        android:id="@+id/tv_international_payment_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="International Payment ? Click here"
        android:textColor="@color/blue"
        android:textSize="@dimen/txtsize_12"
        android:visibility="gone"/>
</LinearLayout>
