<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Email #"-->
<!--        android:layout_marginTop="@dimen/dimen_10dp"-->
<!--        android:layout_marginLeft="@dimen/dimen_10dp"-->
<!--        android:textSize="@dimen/dimen_15sp"-->
<!--        android:textStyle="bold"-->
<!--        android:textColor="@color/title_consu"/>-->

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding30"
            android:layout_marginStart="@dimen/padding15"
            android:layout_marginEnd="@dimen/padding15"
            android:paddingStart="@dimen/txtsize_10"
            android:theme="@android:style/Theme.Holo.Light"
            android:textSize="@dimen/dimen_15sp"
            android:hint="Enter your Mail Id"
            android:textColor="@color/title_grey"/>


    </LinearLayout>

    <TextView
        android:id="@+id/error_mesg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:text="* This field is manditory"
        android:textSize="@dimen/txtsize_12"
        android:visibility="gone"
        android:textColor="@color/red">

    </TextView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_25dp"
        android:layout_marginTop="@dimen/padding20"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="@color/white"
        android:text="Save"
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/dark_blue"
        android:fontFamily="@font/customfont"
        android:layout_gravity="center"/>

</LinearLayout>