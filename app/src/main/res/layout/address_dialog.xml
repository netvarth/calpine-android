<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_curved"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_15dp">

        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:text="Choose a delivery address"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/dimen_15dp"
            android:visibility="visible">

        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:layout_gravity="center"
                android:src="@drawable/left_icon">

            </ImageView>

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:text="Back"
                android:textColor="@color/dark_blue"
                android:textSize="14dp">

            </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Id_const_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:scrollbars="vertical"
                android:visibility="visible"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="@+id/Id_const_layout"
                app:layout_constraintEnd_toEndOf="@+id/Id_const_layout"
                app:layout_constraintHeight_max="250dp"
                app:layout_constraintHeight_min="@dimen/dimen_50dp"
                app:layout_constraintStart_toStartOf="@+id/Id_const_layout"
                app:layout_constraintTop_toTopOf="@+id/Id_const_layout">

            </androidx.recyclerview.widget.RecyclerView>


            <LinearLayout
                android:id="@+id/ll_newAddressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                    android:id="@+id/tv_errorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* All fields are manditory"
                    android:textColor="@color/red"
                    android:textSize="14dp"
                    android:visibility="gone">

                </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                        android:id="@+id/et_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/light_grey"
                        android:hint="First name"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimen_15dp">

                    </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                    <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                        android:id="@+id/et_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/light_grey"
                        android:hint="Last name"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimen_15dp">

                    </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                </LinearLayout>


                <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                    android:id="@+id/et_areaAndFlat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:backgroundTint="@color/light_grey"
                    android:hint="House no/ Building name, Area"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimen_15dp">

                </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:backgroundTint="@color/light_grey"
                    android:hint="City"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimen_15dp">

                </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:backgroundTint="@color/light_grey"
                    android:hint="Pincode"
                    android:maxLength="10"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimen_15dp">

                </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                    android:id="@+id/et_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:backgroundTint="@color/light_grey"
                    android:hint="Landmark"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/dimen_15dp">

                </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91"
                            android:inputType="none"
                            android:enabled="false"
                            android:backgroundTint="@color/light_grey"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/dimen_15dp">

                        </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                        <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                            android:id="@+id/et_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_15dp"
                            android:backgroundTint="@color/light_grey"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="@color/title_color"
                            android:textSize="@dimen/dimen_15dp">

                        </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                    </LinearLayout>

                    <com.jaldeeinc.jaldee.custom.CustomEditTextRegular
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/light_grey"
                        android:hint="Email Id"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/dimen_15dp">

                    </com.jaldeeinc.jaldee.custom.CustomEditTextRegular>

                </LinearLayout>


                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:background="@drawable/border_red"
                    android:backgroundTint="@color/dark_blue"
                    android:paddingStart="@dimen/dimen_18dp"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingEnd="@dimen/dimen_18dp"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:text="Save address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_15dp">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_addNewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:paddingStart="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_15dp">

        <ImageView
            android:layout_width="@dimen/dimen_15dp"
            android:layout_height="@dimen/dimen_15dp"
            android:layout_gravity="center"
            android:src="@drawable/plus"
            app:tint="@color/dark_blue">

        </ImageView>

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_18dp"
            android:text="Add new address"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/dimen_15dp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

    </LinearLayout>


</LinearLayout>

