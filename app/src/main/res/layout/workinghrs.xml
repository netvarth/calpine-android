<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_gradient_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/custom_toolbar" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_background_opaque"
                    android:padding="@dimen/default_padding"
                    android:textColor="@color/title_consu" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:layout_marginLeft="@dimen/padding5"
                        android:layout_marginRight="@dimen/padding5"
                        android:layout_marginTop="@dimen/default_padding"
                        card_view:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/app_background"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding7"
                                android:layout_marginRight="@dimen/padding7"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtMonday"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding2"
                                    android:fontFamily="@font/customfont"
                                    android:padding="@dimen/padding2"
                                    android:text="@string/monday"
                                    android:textColor="@color/title_grey_light"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_workinghr_mon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/padding2"
                                        android:padding="@dimen/padding2"
                                        android:textColor="@color/title_grey_light" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding7"
                                android:layout_marginRight="@dimen/padding7"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtTuesday"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding2"
                                    android:fontFamily="@font/customfont"
                                    android:padding="@dimen/padding2"
                                    android:text="@string/tuesday"
                                    android:textColor="@color/title_grey_light"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_workinghr_tue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/padding2"
                                        android:padding="@dimen/padding2"
                                        android:textColor="@color/title_grey_light" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding7"
                                android:layout_marginRight="@dimen/padding7"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtWednesday"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding2"
                                    android:fontFamily="@font/customfont"
                                    android:padding="@dimen/padding2"
                                    android:text="@string/wednesday"
                                    android:textColor="@color/title_grey_light"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_workinghr_wed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/padding2"
                                        android:padding="@dimen/padding2"

                                        android:textColor="@color/title_grey_light" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding7"
                                android:layout_marginRight="@dimen/padding7"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtThursday"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding2"
                                    android:fontFamily="@font/customfont"
                                    android:padding="@dimen/padding2"
                                    android:text="@string/thursday"
                                    android:textColor="@color/title_grey_light"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_workinghr_thu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/padding2"
                                        android:padding="@dimen/padding2"
                                        android:textColor="@color/title_grey_light" />

                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding7"
                                android:layout_marginRight="@dimen/padding7"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtFriday"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding2"
                                    android:fontFamily="@font/customfont"
                                    android:padding="@dimen/padding2"
                                    android:text="@string/friday"
                                    android:textColor="@color/title_grey_light"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_workinghr_fri"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/padding2"
                                        android:padding="@dimen/padding2"

                                        android:textColor="@color/title_grey_light" />

                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding7"
                                android:layout_marginRight="@dimen/padding7"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtSaturday"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding2"
                                    android:fontFamily="@font/customfont"
                                    android:padding="@dimen/padding2"
                                    android:text="@string/saturday"
                                    android:textColor="@color/title_grey_light"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_workinghr_sat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/padding2"
                                        android:padding="@dimen/padding2"

                                        android:textColor="@color/title_grey_light" />

                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding7"
                                android:layout_marginRight="@dimen/padding7"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtSunday"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding2"
                                    android:fontFamily="@font/customfont"
                                    android:padding="@dimen/padding2"
                                    android:text="@string/sunday"
                                    android:textColor="@color/title_grey_light"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_workinghr_sun"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/padding2"
                                        android:padding="@dimen/padding2"
                                        android:textColor="@color/title_grey_light" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </FrameLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>