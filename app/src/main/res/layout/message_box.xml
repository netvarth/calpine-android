<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20dp">


    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="Meeting Details"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold">

    </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:text="Service name"
        android:textSize="10sp"
        android:layout_below="@id/info">

    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
        android:id="@+id/tv_serviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/dimen_18dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/dark_blue"
        android:layout_below="@id/hint"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/padding3">

    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>


    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/tv_timeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_serviceName"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:text=""
        android:visibility="gone">

    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:orientation="vertical">

        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:letterSpacing="0.07"
            android:text="Provider will call you on this number"
            android:textColor="#000000"
            android:textSize="13sp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

        <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
            android:id="@+id/tv_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:letterSpacing="0.07"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:text=""
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:textSize="@dimen/dimen_15sp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>


    </LinearLayout>


    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
        android:id="@+id/tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_50dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:text="OK"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold">

    </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

</LinearLayout>