<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/dimen_5dp">

    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please provide us with a little more information to complete your booking"
        android:gravity="center_horizontal"
        android:textSize="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="@color/dark_black">

    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_10dp">

        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please upload your id cards"
            android:layout_marginStart="@dimen/dimen_5dp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

        <com.jaldeeinc.jaldee.custom.MultiSpinnerSearch
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/new_spinner_bg">

        </com.jaldeeinc.jaldee.custom.MultiSpinnerSearch>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_35dp"
                app:cardBackgroundColor="@color/spinnerbg">

                <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Aadhar card"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_gravity="center"
                    android:textColor="@color/title_color">

                </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_15dp">

                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:text="fileName">

                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                <ImageView
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:src="@drawable/close"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_10dp">

                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/light_grey"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp">

        </LinearLayout>
    </LinearLayout>


</LinearLayout>