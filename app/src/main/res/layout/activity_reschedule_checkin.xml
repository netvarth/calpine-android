<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaldeeinc.jaldee.activities.RescheduleActivity">

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_footer"
        android:layout_below="@+id/ll_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="25dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white1"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/font_medium"
                        android:letterSpacing="0.02"
                        android:text="Service Info"
                        android:textColor="@color/blue5"
                        android:textSize="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:cardCornerRadius="24dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/iv_serviceIcon"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/service_avatar"
                                    android:visibility="visible">

                                </ImageView>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_userName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_semibold"
                                android:letterSpacing="0.02"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/blue6"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tv_spName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_semibold"
                                android:letterSpacing="0.02"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/blue6"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_location_icon"
                                    android:layout_width="20dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center_vertical"
                                    app:tint="@color/grey23">

                                </ImageView>

                                <TextView
                                    android:id="@+id/tv_locationName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/padding3"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/font_regular"
                                    android:letterSpacing="0.02"
                                    android:maxLines="2"
                                    android:text=""
                                    android:textColor="@color/grey23"
                                    android:textSize="@dimen/txtsize_12">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:id="@+id/ll_providerPhoneNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_prvdr_phone_icon"
                                        android:layout_width="20dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center_vertical"
                                        app:tint="@color/grey23">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/tv_providerPhoneNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/padding3"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/font_regular"
                                        android:letterSpacing="0.02"
                                        android:maxLines="3"
                                        android:text=""
                                        android:textColor="@color/grey23"
                                        android:textSize="@dimen/txtsize_12">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_providerEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_prvdr_email_icon"
                                        android:layout_width="20dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center_vertical"
                                        app:tint="@color/grey23">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/tv_providerEmail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/padding3"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/font_regular"
                                        android:letterSpacing="0.02"
                                        android:maxLines="3"
                                        android:text=""
                                        android:textColor="@color/grey23"
                                        android:textSize="@dimen/txtsize_12">

                                    </TextView>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_teleService"
                                android:layout_width="17dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/service_avatar">

                            </ImageView>

                            <TextView
                                android:id="@+id/tv_serviceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/padding3"
                                android:ellipsize="end"
                                android:fontFamily="@font/font_medium"
                                android:letterSpacing="0.02"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16dp">

                            </TextView>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/padding3"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/font_regular"
                            android:letterSpacing="0.02"
                            android:text=""
                            android:textColor="@color/grey18"
                            android:textSize="@dimen/txtsize_10">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/font_medium"
                    android:letterSpacing="0.02"
                    android:text="Booking For"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/grey20"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/icon_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="51dp"
                                    android:layout_height="51dp"
                                    android:contentDescription="TODO"
                                    android:src="@drawable/circle_borderblue_whitefilled" />

                                <TextView
                                    android:id="@+id/icon_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text=""
                                    android:textAllCaps="true"
                                    android:textColor="@color/blue5"
                                    android:textSize="26dp" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="8"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_consumerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/font_semibold"
                                android:letterSpacing="0.02"
                                android:text=""
                                android:textColor="@color/black8"
                                android:textSize="16dp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tv_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.6"
                                    android:fontFamily="@font/font_regular"
                                    android:letterSpacing="0.02"
                                    android:text=""
                                    android:textColor="@color/grey22"
                                    android:textSize="12dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="24dp"
                                    android:alpha="0.6"
                                    android:fontFamily="@font/font_regular"
                                    android:letterSpacing="0.02"
                                    android:text=""
                                    android:textColor="@color/grey22"
                                    android:textSize="12dp">

                                </TextView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_timeHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/font_medium"
                    android:letterSpacing="0.02"
                    android:text="Date &amp; Time"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/grey20"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <GridLayout
                            android:id="@+id/gridLayout_booking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:columnCount="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_date"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_columnWeight="1"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.5"
                                    android:fontFamily="@font/font_regular"
                                    android:gravity="left"
                                    android:letterSpacing="0.02"
                                    android:text="Date"
                                    android:textColor="@color/grey22"
                                    android:textSize="12dp"
                                    android:visibility="visible">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_actualTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="left"
                                    android:letterSpacing="0.02"
                                    android:text=""
                                    android:textColor="@color/black8"
                                    android:textSize="15dp"
                                    android:visibility="visible">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_time"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_columnWeight="1"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.5"
                                    android:fontFamily="@font/font_regular"
                                    android:gravity="center"
                                    android:letterSpacing="0.02"
                                    android:text="Time"
                                    android:textColor="@color/grey22"
                                    android:textSize="12dp"
                                    android:visibility="visible">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="left"
                                    android:letterSpacing="0.02"
                                    android:text=""
                                    android:textColor="@color/black8"
                                    android:textSize="15dp"
                                    android:visibility="visible">

                                </TextView>

                            </LinearLayout>

                        </GridLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_slots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/font_medium"
                    android:letterSpacing="0.02"
                    android:text="Reschedule To"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    app:cardBackgroundColor="@color/grey20"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/ll_booking1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <GridLayout
                            android:id="@+id/gridLayout_booking1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:columnCount="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_date1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_columnWeight="1"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.5"
                                    android:fontFamily="@font/font_regular"
                                    android:gravity="left"
                                    android:letterSpacing="0.02"
                                    android:text="Date"
                                    android:textColor="@color/grey22"
                                    android:textSize="12dp"
                                    android:visibility="visible">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="left"
                                    android:letterSpacing="0.02"
                                    android:text=""
                                    android:textColor="@color/black8"
                                    android:textSize="15dp"
                                    android:visibility="visible">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_time1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_columnWeight="1"
                                android:gravity="left"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.5"
                                    android:fontFamily="@font/font_regular"
                                    android:gravity="center"
                                    android:letterSpacing="0.02"
                                    android:text="Time"
                                    android:textColor="@color/grey22"
                                    android:textSize="12dp"
                                    android:visibility="visible">

                                </TextView>

                                <TextView
                                    android:id="@+id/tv_time1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/font_semibold"
                                    android:gravity="left"
                                    android:letterSpacing="0.02"
                                    android:text=""
                                    android:textColor="@color/black8"
                                    android:textSize="15dp"
                                    android:visibility="visible">

                                </TextView>

                            </LinearLayout>




                        </GridLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding3"
                            android:layout_marginBottom="@dimen/padding3"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/font_regular"
                                android:letterSpacing="0.1"
                                android:text="People waiting in line :"
                                android:textColor="@color/red6"
                                android:textSize="12sp">

                            </TextView>

                            <TextView
                                android:id="@+id/tv_peopleAhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/font_regular"
                                android:letterSpacing="0.1"
                                android:text=""
                                android:textColor="@color/red6"
                                android:textSize="12sp">

                            </TextView>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_booking2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font_regular"
                            android:letterSpacing="0.1"
                            android:text="No queues available on selected date.Please choose other date."
                            android:textColor="@color/red6"
                            android:textSize="12sp">

                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/cv_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/cv_addNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/boarder_blue_roundedge_20_fill_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/padding15"
                    android:layout_height="@dimen/padding20"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_document"
                    app:tint="@color/location_theme" />

                <TextView
                    android:id="@+id/tv_addNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding3"
                    android:fontFamily="@font/font_regular"
                    android:text="Add Note"
                    android:textColor="@color/location_theme"
                    android:textSize="@dimen/txtsize_12">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/cv_attachFile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/boarder_blue_roundedge_20_fill_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="@dimen/padding20"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_attachments"
                    app:tint="@color/location_theme" />

                <TextView
                    android:id="@+id/attach_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding3"
                    android:fontFamily="@font/font_regular"
                    android:text="Attach File"
                    android:textColor="@color/location_theme"
                    android:textSize="@dimen/txtsize_12">

                </TextView>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/padding45"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginEnd="@dimen/padding5"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/blue5"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/font_medium"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_14">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_submit"
                android:layout_width="0dp"
                android:layout_height="@dimen/padding45"
                android:layout_marginTop="@dimen/padding5"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/inactive_text"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/font_medium"
                        android:text="Reschedule"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_14">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>