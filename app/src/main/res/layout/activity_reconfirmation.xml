<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaldeeinc.jaldee.activities.ReconfirmationActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:background="@color/white"
        android:paddingEnd="@dimen/dimen_10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/padding3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding5"
                android:src="@mipmap/img_back_arrow"
                app:tint="@color/dark_blue">

            </ImageView>

        </androidx.cardview.widget.CardView>


        <com.jaldeeinc.jaldee.custom.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Review and Confirm"
            android:textColor="@color/location_theme"
            android:textSize="@dimen/dimen_16dp">

        </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nilu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/dark_blue"
            android:orientation="vertical"
            android:paddingBottom="30dp" />

        <LinearLayout
            android:id="@+id/nilu2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/nilu"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/txtsize_10"
                android:layout_marginRight="@dimen/txtsize_10"
                android:orientation="vertical">

                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                    android:id="@+id/tv_providerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Hawks Hospital"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_location_icon"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        app:tint="@color/white">

                    </ImageView>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                        android:id="@+id/tv_locationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding3"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Kodakara, Thrissur, Kerala"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtsize_12">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_providerPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_prvdr_phone_icon"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/white">

                        </ImageView>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_providerPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/padding3"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:text="5556665556"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txtsize_12">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_providerEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_prvdr_email_icon"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/white">

                        </ImageView>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_providerEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/padding3"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:text="asd@asd.com"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txtsize_12">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="@dimen/padding20"
                android:background="@color/white"
                android:elevation="@dimen/dimen_10dp"
                app:cardCornerRadius="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_cnsmrDetails_Heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/padding3"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="CONSULTATION FOR :"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_1dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_marginEnd="@dimen/dimen_1dp"
                            android:layout_marginBottom="@dimen/dimen_15dp"
                            android:elevation="@dimen/dimen_5dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/dimen_10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/dimen_25dp"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingRight="@dimen/dimen_25dp"
                                android:paddingBottom="10dp">

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:id="@+id/tv_customerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:gravity="center"
                                    android:text="Aswin"
                                    android:textColor="@color/dark_blue"
                                    android:textSize="@dimen/dimen_16dp">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewLight
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:gravity="center"
                                    android:text="@string/contact_information"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_12dp">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewLight>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="@dimen/dimen_5dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_cnsmr_phone_icon"
                                            android:layout_width="20dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center_vertical">

                                        </ImageView>

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                            android:id="@+id/tv_phoneNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/padding3"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/txtsize_12">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_cnsmr_email_icon"
                                            android:layout_width="20dp"
                                            android:layout_height="18dp"
                                            android:layout_gravity="center_vertical">

                                        </ImageView>

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                            android:id="@+id/tv_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/padding3"
                                            android:ellipsize="end"
                                            android:maxLines="3"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/txtsize_12">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                            android:id="@+id/tv_service_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/padding3"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="SERVICE DETAILS :"
                            android:textColor="@color/sec_title_grey"
                            android:textSize="@dimen/txtsize_12" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_1dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_marginEnd="@dimen/dimen_1dp"
                            android:layout_marginBottom="@dimen/dimen_15dp"
                            android:elevation="@dimen/dimen_5dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/dimen_10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/dimen_25dp"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingRight="@dimen/dimen_25dp"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/iv_serviceIcon"
                                        android:layout_width="20dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center_vertical">

                                    </ImageView>

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/tv_serviceName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:textColor="@color/primary_green"
                                        android:textSize="@dimen/dimen_18dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewBold>
                                </LinearLayout>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewLight
                                    android:id="@+id/tv_waitingInLine"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:gravity="center"
                                    android:text="Waiting in line : 0 People\0 Min"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/dimen_12dp"
                                    android:visibility="gone">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewLight>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:id="@+id/tv_vitual_service_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/location_theme"
                                    android:textSize="@dimen/dimen_12dp"
                                    android:visibility="gone">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                <LinearLayout
                                    android:id="@+id/ll_bookingAt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_20dp"
                                    android:layout_marginBottom="@dimen/dimen_5dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="2">

                                            <androidx.cardview.widget.CardView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="1dp"
                                                android:layout_weight="@integer/int_1"
                                                android:elevation="@dimen/dimen_5dp"
                                                android:paddingTop="@dimen/padding2"
                                                android:paddingBottom="@dimen/padding2"
                                                app:cardBackgroundColor="@color/dark_blue"
                                                app:cardCornerRadius="@dimen/dimen_10dp">

                                                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                                    android:id="@+id/tv_bookingAt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:ellipsize="end"
                                                    android:maxLines="2"
                                                    android:text="asdd"
                                                    android:textColor="@color/white"
                                                    android:textSize="@dimen/txtsize_10" />
                                            </androidx.cardview.widget.CardView>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:gravity="center_vertical"
                                            android:orientation="vertical"
                                            android:paddingTop="@dimen/dimen_10dp">

                                            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                                android:id="@+id/tv_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/padding3"
                                                android:ellipsize="end"
                                                android:maxLines="2"
                                                android:text="FRIDAY, OCT 08,2021"
                                                android:textColor="@color/dark_blue"
                                                android:textSize="@dimen/txtsize_12">

                                            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                                android:id="@+id/tv_time"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/padding3"
                                                android:ellipsize="end"
                                                android:maxLines="2"
                                                android:text="2.30 PM"
                                                android:textColor="@color/dark_blue"
                                                android:textSize="@dimen/txtsize_12">

                                            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_image1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/appoinment_icon_time">

                                        </ImageView>

                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_donationAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/padding3"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/dimen_15dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/tv_donationAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/padding3"
                                        android:ellipsize="end"
                                        android:maxLines="2"
                                        android:text="10"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/dimen_25dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_servicePrepay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_1dp"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:layout_marginEnd="@dimen/dimen_1dp"
                            android:layout_marginBottom="@dimen/dimen_15dp"
                            android:elevation="@dimen/dimen_5dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/dimen_10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingTop="@dimen/dimen_10dp"
                                android:paddingRight="@dimen/dimen_10dp"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:id="@+id/ll_serviceamount"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/txtservicepayment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Service Price : ₹"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/dimen_14dp" />

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/txtserviceamount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/title_grey"
                                        android:textSize="@dimen/dimen_14dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_prepay"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/txtprepay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Payment Required Now : ₹"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/dimen_14dp" />

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/txtprepayamount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="50"
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/dimen_14dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_fullfees_payd_advance"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/txtfullfees_payd_advance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Full fees should be paid in advance."
                                        android:textColor="@color/dark_blue"
                                        android:textSize="@dimen/dimen_14dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_payment_mode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_20dp"
                                    android:layout_marginBottom="@dimen/dimen_10dp"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Choose Payment Type"
                                        android:textColor="@color/tab_disable"
                                        android:textSize="@dimen/dimen_12dp">

                                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                                    <LinearLayout
                                        android:id="@+id/ll_jCash"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:orientation="vertical"
                                        android:visibility="visible">

                                        <CheckBox
                                            android:id="@+id/cb_jCash"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:buttonTint="@color/blue"
                                            android:checked="true"
                                            android:padding="@dimen/dimen_0dp"
                                            android:text=""
                                            android:textColor="@color/darker_gray"
                                            android:textSize="@dimen/txtsize_12" />

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                            android:id="@+id/tv_jCashHint"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="33dp"
                                            android:text="Balance amount can be paid by other payment methods"
                                            android:textColor="@color/darker_gray"
                                            android:textSize="@dimen/txtsize_12" />
                                    </LinearLayout>

                                    <!--<androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rv_payment_modes"
                                        android:layout_width="match_parent"
                                        android:layout_height="250dp"
                                        android:layout_marginTop="@dimen/dimen_5dp"
                                        android:visibility="gone">

                                    </androidx.recyclerview.widget.RecyclerView>-->
                                    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/gv_payment_modes"
                                        android:layout_width="match_parent"
                                        android:layout_height="250dp"
                                        android:layout_marginTop="@dimen/dimen_10dp"
                                        android:gravity="center"
                                        android:horizontalSpacing="@dimen/dimen_10dp"
                                        android:numColumns="3"
                                        android:stretchMode="columnWidth"
                                        android:verticalSpacing="@dimen/dimen_10dp" />

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen_15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                    android:id="@+id/tv_payment_link"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dimen_20dp"
                                    android:gravity="left"
                                    android:text="International Payment?"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/txtsize_12"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="7">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_submit"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    app:cardBackgroundColor="@color/dark_blue"
                                    app:cardCornerRadius="5dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/dimen_10dp">

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                                            android:id="@+id/tv_buttonName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:paddingLeft="@dimen/dimen_10dp"
                                            android:text="Make Payment"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/dimen_14sp">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:src="@drawable/right_arrow"
                                            app:tint="@color/white">

                                        </ImageView>


                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_cancellation_policy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_15dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                android:weightSum="@integer/int_5">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_cancellation_policy"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    app:cardBackgroundColor="@color/tab_disable"
                                    app:cardCornerRadius="5dp">

                                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                        android:id="@+id/tv_cancellation_policy"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="@dimen/dimen_5dp"
                                        android:text="Cancellation Policy"
                                        android:textColor="@color/tab_unchecked"
                                        android:textSize="@dimen/txtsize_10" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>