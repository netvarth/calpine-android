<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/dimen_35dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/location_access">

    </de.hdodenhof.circleimageview.CircleImageView>

    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="Allow us to access your location"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/dimen_16dp">

    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

    <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
        android:id="@+id/tv_textHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_text"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="center"
        android:text="We need your location to provide you with best experience. Your location is safe with us."
        android:textColor="@color/opaque_title_grey">

    </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_textHint"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_20dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_allow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/location_theme"
            app:cardCornerRadius="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow"
                android:textSize="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_gravity="center"
                android:textColor="@color/white">

            </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_deny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/special_background"
            app:cardCornerRadius="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp">

            <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deny"
                android:textSize="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_gravity="center"
                android:textColor="@color/title_color">

            </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>