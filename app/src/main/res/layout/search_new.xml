<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rl_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="22dp"
        app:cardElevation="@dimen/dimen_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:padding="4dp">

                    <LinearLayout
                        android:id="@+id/ll_layoutOne"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/ll_image"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                                android:id="@+id/tv_spName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/padding3"
                                android:layout_weight="0.9"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:padding="2dp"
                                android:textColor="#0F0C08"
                                android:textSize="@dimen/dimen_18dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewBold>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/padding3">

                            <ImageView
                                android:layout_width="@dimen/dimen_18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/new_location"
                                app:tint="@color/location_theme">

                            </ImageView>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                    android:id="@+id/tv_locationName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_1dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_alignParentLeft="true"
                                    android:layout_toStartOf="@id/tv_distance"
                                    android:textColor="@color/location_theme"
                                    android:textSize="14dp">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                    android:id="@+id/tv_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_5dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/location_theme"
                                    android:textSize="14dp">

                                </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_specializations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4dp"
                            android:layout_marginEnd="@dimen/dimen_5dp">

                            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                android:id="@+id/tv_spOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/title_color"
                                android:textSize="14dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>


                            <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                android:id="@+id/tv_spTwo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/title_color"
                                android:textSize="14dp">

                            </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        card_view:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/iv_jaldeeVerified"
                                android:layout_width="@dimen/dimen_30dp"
                                android:layout_height="@dimen/dimen_30dp"
                                android:src="@drawable/jaldee_basicplus"
                                android:visibility="gone">

                            </ImageView>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:visibility="visible"
                                    app:cardCornerRadius="@dimen/dimen_30dp">

                                    <ImageView
                                        android:id="@+id/iv_spImage"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:scaleType="fitXY"/>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_shimmer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:visibility="gone"
                                    app:cardCornerRadius="@dimen/dimen_30dp">

                                    <com.omjoonkim.skeletonloadingview.SkeletonLoadingView
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        app:baseColor="#F4F4F4"
                                        app:deepColor="@color/white">

                                    </com.omjoonkim.skeletonloadingview.SkeletonLoadingView>

                                </androidx.cardview.widget.CardView>

                            </FrameLayout>


                        </LinearLayout>


                        <RatingBar
                            android:id="@+id/rb_ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen_10dp"
                            android:numStars="5"
                            android:progressDrawable="@drawable/rating_display"
                            android:rating="4"
                            android:visibility="gone" />


                    </LinearLayout>


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_statusBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/difference_background"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rl_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_services"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_12dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                            android:id="@+id/tv_serviceOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_4dp"
                            android:layout_marginTop="@dimen/padding2"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Consultation, OpConsultation,WhatappVideo call"
                            android:textColor="@color/location_theme"
                            android:textSize="@dimen/dimen_12dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                            android:id="@+id/tv_serviceTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/padding2"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/location_theme"
                            android:textSize="@dimen/dimen_12dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                        <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                            android:id="@+id/tv_serviceThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/padding2"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/location_theme"
                            android:textSize="@dimen/dimen_12dp">

                        </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_coupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:visibility="visible"
                        android:layout_marginEnd="@dimen/dimen_10dp">

                        <ImageView
                            android:id="@+id/iv_jdn"
                            android:layout_width="@dimen/dimen_18dp"
                            android:layout_height="@dimen/dimen_18dp"
                            android:visibility="gone"
                            android:src="@drawable/jdn_icon">

                        </ImageView>

                        <ImageView
                            android:id="@+id/iv_providerCoupons"
                            android:layout_width="@dimen/dimen_18dp"
                            android:layout_height="@dimen/dimen_18dp"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:visibility="gone"
                            android:src="@drawable/discount">

                        </ImageView>

                    </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_s"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:paddingTop="@dimen/dimen_2dp"
                        android:visibility="gone">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_waitlist"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:visibility="gone"
                                    android:gravity="center">


                                    <LinearLayout
                                        android:id="@+id/ll_estTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/padding2"
                                        android:layout_marginEnd="@dimen/dimen_5dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                            android:id="@+id/tv_estWaitTime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/dimen_5dp"
                                            android:layout_marginEnd="5dp"
                                            android:textColor="@color/title_grey_light"
                                            android:textSize="@dimen/dimen_10dp">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                            android:id="@+id/tv_time"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-3dp"
                                            android:textColor="@color/location_theme"
                                            android:textSize="14dp">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/ll_waitingInLine"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dimen_10dp"
                                        android:layout_marginTop="@dimen/padding2"
                                        android:layout_marginEnd="@dimen/dimen_5dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                            android:id="@+id/tv_waitingInLine"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/dimen_5dp"
                                            android:layout_marginEnd="5dp"
                                            android:text="Waiting"
                                            android:textColor="@color/title_grey_light"
                                            android:textSize="@dimen/dimen_10dp">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="-3dp">

                                            <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                                android:id="@+id/tv_waitingCount"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:text=""
                                                android:textColor="@color/location_theme"
                                                android:textSize="14dp">

                                            </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                                            <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                                android:id="@+id/tv_waitingCountHint"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/padding2"
                                                android:text=""
                                                android:textColor="@color/location_theme"
                                                android:textSize="@dimen/dimen_10dp">

                                            </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>

                                        </LinearLayout>


                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_divider"
                                    android:layout_width="@dimen/dimen_1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/padding5"
                                    android:layout_marginBottom="3dp"
                                    android:background="@color/title_color"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_appointment"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_10dp"
                                    android:layout_weight="0.5"
                                    android:visibility="gone"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/padding2"
                                        android:layout_marginEnd="@dimen/dimen_5dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewMedium
                                            android:id="@+id/tv_nextAvailableHint"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/dimen_5dp"
                                            android:layout_marginEnd="5dp"
                                            android:text=""
                                            android:textColor="@color/title_grey_light"
                                            android:textSize="@dimen/dimen_10dp">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewMedium>

                                        <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                                            android:id="@+id/tv_nextAvailableTime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="-3dp"
                                            android:text=""
                                            android:textColor="@color/location_theme"
                                            android:textSize="14dp">

                                        </com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold>


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>


                        </RelativeLayout>


                    </RelativeLayout>

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_claimNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_marginEnd="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/neomorph_background_color"
                    app:cardElevation="@dimen/padding3">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewItalicSemiBold
                        android:id="@+id/claimable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding5"
                        android:layout_marginTop="@dimen/padding2"
                        android:layout_marginBottom="@dimen/padding2"
                        android:gravity="center"
                        android:paddingRight="@dimen/padding5"
                        android:text="Claim it now"
                        android:textColor="@color/location_theme"
                        android:textSize="@dimen/dimen_12dp"
                        android:visibility="visible" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_actionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/dark_blue"
                android:orientation="horizontal"
                android:outlineSpotShadowColor="@color/gray"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_enquiry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/special_background"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dimen_8dp"
                    android:paddingBottom="@dimen/dimen_8dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_groupchat"
                        app:tint="@color/dark_blue">

                    </ImageView>

                    <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:text="Enquiry"
                        android:textColor="@color/dark_blue"
                        android:textSize="14dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_action"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/action_color"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <com.jaldeeinc.jaldee.custom.CustomTextViewBold
                        android:id="@+id/tv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_8dp"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/dimen_16dp">

                    </com.jaldeeinc.jaldee.custom.CustomTextViewBold>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#95ffffff"
            android:orientation="horizontal"
            android:visibility="gone" />


    </androidx.cardview.widget.CardView>


</RelativeLayout>