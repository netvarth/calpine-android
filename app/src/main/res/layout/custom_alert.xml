<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LcustomLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tooltip_nav_up"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="@drawable/nav_up" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding5"
        android:background="@color/app_background"
        android:orientation="vertical">

        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:id="@+id/txtjaldeeVerified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:background="@color/view_border"
            android:paddingTop="@dimen/padding5"
            android:paddingBottom="@dimen/padding5"
            android:paddingStart="@dimen/dimen_15dp"
            android:text="Jaldee Verified"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txtsize_14" />

        <com.jaldeeinc.jaldee.custom.CustomTextViewSemiBold
            android:id="@+id/txtDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginBottom="@dimen/default_padding"
            android:paddingTop="@dimen/padding5"
            android:paddingBottom="@dimen/padding5"
            android:paddingStart="@dimen/dimen_15dp"
            android:text="Distance"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txtsize_title" />
    </LinearLayout>
</LinearLayout>