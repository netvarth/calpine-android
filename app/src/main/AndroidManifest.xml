<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jaldeeinc.jaldee">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--Permission for checking whether wifi is enabled -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.CALL_PHONE"/>


    <!--Permission for checking for SMS -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:name="com.jaldeeinc.jaldee.common.MyApplication"
        android:icon="@mipmap/ynw_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity
            android:name="com.jaldeeinc.jaldee.activities.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jaldeeinc.jaldee.activities.Register"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.jaldeeinc.jaldee.activities.Signup"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.jaldeeinc.jaldee.activities.VerifyOtp"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.jaldeeinc.jaldee.activities.Password"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.jaldeeinc.jaldee.activities.Home"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="FCM_PLUGIN_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jaldeeinc.jaldee.payment.PayUMoneyWebview"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.jaldeeinc.jaldee.activities.Login"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.jaldeeinc.jaldee.activities.ResetOtp"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.SwipeGalleryImage"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.FilterActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.jaldeeinc.jaldee.activities.SearchServiceActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.SearchLocationActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.CheckIn"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.CheckInCopy"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.PaymentActivity"
            android:screenOrientation="portrait"></activity>



        <activity
            android:name="com.jaldeeinc.jaldee.activities.CheckinFamilyMember"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.MessageActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.DetailInboxList"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.AddMemberChekin"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="com.jaldeeinc.jaldee.activities.TermsOfUse"
            android:screenOrientation="portrait"></activity>


        <activity
            android:name="com.jaldeeinc.jaldee.activities.BillActivity"
            android:screenOrientation="portrait"></activity>


        <receiver
            android:name="com.jaldeeinc.jaldee.service.SmsBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service android:name="com.jaldeeinc.jaldee.service.FirebaseService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>



    </application>

</manifest>